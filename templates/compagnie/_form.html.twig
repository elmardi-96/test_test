                                                            {{ form_widget(form.tel2,{'attr':{'class':'form-control  form-control-sm','placeholder':'Tel 2'}}) }}

                                                            <div class="form-error {% if form_errors(form.tel2)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.tel2) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>


                                                    <div class="form-group row">
                                                        {{ form_label(form.fax ,'Fax :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                        <div class="col-sm-8">
                                                            {{ form_widget(form.fax,{'attr':{'class':'form-control  form-control-sm','placeholder':'Fax'}}) }}

                                                            <div class="form-error {% if form_errors(form.fax)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.fax) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>

                                                    <div class="form-group row">
                                                        {{ form_label(form.email1 ,'Mail 1 :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                        <div class="col-sm-8">
                                                            {{ form_widget(form.email1,{'attr':{'class':'form-control  form-control-sm','placeholder':'Mail 1'}}) }}

                                                            <div class="form-error {% if form_errors(form.email1)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.email1) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>

                                                    <div class="form-group row">
                                                        {{ form_label(form.email2 ,'Mail 2 :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                        <div class="col-sm-8">
                                                            {{ form_widget(form.email2,{'attr':{'class':'form-control  form-control-sm','placeholder':'Mail 2'}}) }}

                                                            <div class="form-error {% if form_errors(form.email2)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.email2) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>
                                                    <div class="form-group row">
                                                        {{ form_label(form.dateCreation ,'Date de Création :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                        <div class="col-sm-3">
                                                            {{ form_widget(form.dateCreation,{'attr':{'class':'form-control  form-control-sm','placeholder':'Date de Création'}}) }}

                                                            <div class="form-error {% if form_errors(form.dateCreation)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.dateCreation) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>

                                                    <div class="form-group row">
                                                        {{ form_label(form.nombreEmploye ,"Nombre d'employé :", {'label_attr':{'class':'col-sm-4'}}) }}
                                                        <div class="col-sm-3">
                                                            {{ form_widget(form.nombreEmploye,{'attr':{'class':'form-control  form-control-sm','placeholder':"Nombre d'employé :"}}) }}

                                                            <div class="form-error {% if form_errors(form.nombreEmploye)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.nombreEmploye) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>
                                                </div>


                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
</div>
{{form_widget(form._token)}}
{{ form_end(form,{'render_rest': false}) }}
