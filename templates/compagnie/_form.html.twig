                                                            <div class="form-error {% if form_errors(form.adresse)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.adresse) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>


                                                </div>


                                                <div class="col-md-6">

                                                    <h3 class="m-t-none m-b"><br></h3>

                                                    <div class="hr-line-dashed"></div>
                                                    <div class="form-group row">
                                                        {{ form_label(form.tel1 ,'Téléphone 1 :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                        <div class="col-sm-8">
                                                            {{ form_widget(form.tel1,{'attr':{'class':'form-control  form-control-sm','placeholder':'Téléphone 1'}}) }}

                                                            <div class="form-error {% if form_errors(form.tel1)|length > 0 %}error-class-tab{% endif %}">
                                                                {{ form_errors(form.tel1) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed"></div>

                                                    <div class="form-group row">
                                                        {{ form_label(form.tel2 ,'Téléphone 2 :', {'label_attr':{'class':'col-sm-4'}}) }}
