{% extends 'base_config.html.twig' %}

{% block title %}Utilisateurs-groupes{% endblock %}

{% block body %}



    <div id="right-sidebar" class="actions animated" >


    </div>

    <div class="new">
         {# {% include './config/inc/navigation.html.twig' %}


 
       {{ include('./config/us_groupe/_form.html.twig') }} #}

        {{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}

<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


	<div class="col-lg-6">
		<h2 class="fo">Configuration Groupe
			<span>(groupe)</span>
		</h2>
	</div>


	<div class="col-lg-6">
		<div class="title-action">
			<button class="btn btn-white btn-xs btn-lg my-button" data-style="expand-left" type="submit">
				<i class="fa fa-save"></i>
				{{ button_label|default('Enregistrer') }}</button>
			{% if  us_groupe.id > 0 %}
				<a href="#" class="btn btn-xs btn-danger btn-outline" id="_delete">
					<i class="fa fa-trash"></i>
					Supprimer</a>
				<div id="test" data-groupe-id="{{ us_groupe.id|json_encode }}"></div>

			{% endif  %}
		</div>
	</div>

	<div class="border-b"></div>
	<div class="col-lg-12">

		{{ wo_render_breadcrumbs() }}
	</div>
</div>


<br/><br/>


<div class="row pt-20 scroll_content">
	<div class="col-lg-12 ">
		<div class="ibox">

			<div class="ibox-content">

				<div class="message-success"></div>


				<div class="row m-t-sm">
					<div class="col-lg-12">
						<div class="panel blank-panel">
							<div class="panel-heading">
								<div class="panel-options">
									<ul class="nav nav-tabs">
										<li>
											<a class="nav-link active" href="#tab-1" data-toggle="tab">informations
											</a>
										</li>
									</ul>
								</div>
							</div>

							<div class="panel-body">
								<div class="col-md-12">
									<div class="tab-content">
										<div class="tab-pane active" id="tab-1">


											<div class="row">


												<div class="col-md-6 b-r">
                                                
													<div class="form-group row">
														{{ form_label(form.designation ,'Désignation (*):', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
														<div class="col-sm-9">
															{{ form_widget(form.designation,{'attr':{'class':'form-control form-control-sm','placeholder': 'Désignation'}}) }}
															<span class="form-error-message">
																{{ form_errors(form.designation) }}
															</span>
														</div>

													</div>


													<div class="hr-line-dashed"></div>
													<div class="form-group row">
														{{ form_label(form.abreviation ,'Abreviation:', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
														<div class="col-sm-9">
															{{ form_widget(form.abreviation,{'attr':{'class':'form-control form-control-sm','placeholder': 'Abreviation'}}) }}
															<span class="form-error-message">
																{{ form_errors(form.abreviation) }}
															</span>
														</div>

													</div>


													<div class="hr-line-dashed"></div>
													<div class="form-group row">
														{{ form_label(form.description ,'Description:', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
														<div class="col-sm-9">
															{{ form_widget(form.description,{'attr':{'class':'form-control form-control-sm','placeholder': 'Description'}}) }}
															<span class="form-error-message">
																{{ form_errors(form.description) }}
															</span>
														</div>

													</div>
													<div class="hr-line-dashed"></div>

													<div class="form-group row">
														{{ form_label(form.active ,'Active :', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
														<div class="col-sm-9">
															{{ form_widget(form.active) }}
														</div>
													</div>
													<div class="hr-line-dashed"></div>

												</div>
												{% if us_groupe.id > 0 %}
													<div class="col-md-6 br">


														<div class="form-group row">
															<label class="col-sm-3 col-form-label">Id:</label>
															<div class="col-sm-9 col-form-label">
																{{ us_groupe.id }}
															</div>
														</div>


														<div class="hr-line-dashed"></div>

														<div class="form-group row">
															<label class="col-sm-3 col-form-label">Désignation :</label>
															<div class="col-sm-9 col-form-label">
																{{ us_groupe.designation }}
															</div>
														</div>
														<div class="hr-line-dashed"></div>

														<div class="form-group row">
															<label class="col-sm-3 col-form-label">Abreviation :</label>
															<div class="col-sm-9 col-form-label">
																{{ us_groupe.abreviation }}
															</div>
														</div>
														<div class="hr-line-dashed"></div>

														<div class="form-group row">
															<label class="col-sm-3 col-form-label">Description :</label>
															<div class="col-sm-9 col-form-label">
																{{ us_groupe.description }}
															</div>
														</div>


														<div class="hr-line-dashed"></div>

														<div class="form-group row">
															<label class="col-sm-3 col-form-label">Active:</label>
															<div class="col-sm-9 col-form-label">
																{% if us_groupe.active == true %}
																	Active
																{% else %}
																	Désactivé
																{% endif %}
															</div>
														</div>
													</div>
												{% endif %}

											</div>


										</div>
									</div>
								</div>

							</div>
						</div>
					</div>


				</div>
			</div>

		</div>
	</div>
	{{form_widget(form._token)}}
	{{ form_end(form,{'render_rest': false}) }}








    </div>



{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('us_groupe') }}
{% endblock %}