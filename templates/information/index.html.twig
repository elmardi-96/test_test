{% extends 'base_achat.html.twig' %}

{% block body %}
	{{ form_start(form) }}

	<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">

		<div class="col-lg-4">
			<h2 class="fo">Achat, bon  commande fournisseur
			</h2>
		</div>

		<div class="col-lg-8">
			<div class="title-action">
				<button class="btn btn-white btn-xs btn-lg my-button" data-style="expand-left" type="submit">
					<i class="fa fa-save"></i>
					{{ button_label|default('Enregistrer') }}</button>


			</div>
		</div>

		<div class="border-b"></div>
		<div class="col-lg-12">
			{{ wo_render_breadcrumbs() }}
		</div>

	</div>
	<br/><br/>
	<div class="row pt-20">
		<div class="col-lg-12 ">
			<div class="ibox">

				<div class="ibox-content">
					<div class="message-success"></div>
					<div class="row m-t-sm">
						<div class="col-lg-12">
							<div class="panel blank-panel">
								<div class="panel-heading">
									<div class="panel-options">
										<ul class="nav nav-tabs">
											<li>
												<a class="nav-link active" href="#tab-1" data-toggle="tab">informations de base
												</a>
											</li>

										</ul>
									</div>
								</div>
								<div class="panel-body">

									<div class="tab-content">
										<div class="tab-pane active" id="tab-1">
											<div class="row">
												<div
													class="form-validation-msg">
													{# message flash #}
													{% for label, messages in app.flashes %}
														{% for message in messages %}
															<div data-toastr="{{ label }}" class="toastr-msg">
																{{ message }}
															</div>
														{% endfor %}
													{% endfor %}
													{# form global errors  #}
													<div class="form-errors">{{form_errors(form)}}</div>
												</div>
											</div>

											<div class="row">
												<div class="col-md-6 b-r">

													<h3 class="m-t-none m-b">Informations
													</h3>

													<div class="form-group row">
														{{ form_label(form.nom ,'Nom :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-8 input-group">
															{{ form_widget(form.nom,{'attr':{'class':' form-control form-control-sm','placeholder':'Nom'}}) }}

															{#  <span class="input-group-btn">
																																																																																																																																																																																													                                                                                                                                                                              <a title="Ajouter une affaire" class="_t_affaire_quick btn btn-white btn-bitbucket"> <i class="fa fa-plus-circle"></i></a> 
																																																																																																																																																																																													                                                                                                                                                                          </span>#}
														</div>


													</div>

													<div class="hr-line-dashed"></div>

													<div class="form-group row">
														{{ form_label(form.prenom ,'Prenom :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-8 input-group">
															{{ form_widget(form.prenom,{'attr':{'class':' form-control form-control-sm','placeholder':'Prenom'}}) }}

															{#  <span class="input-group-btn">
																																																																																																																																																																																													                                                                                                                                                                              <a title="Ajouter une affaire" class="_t_affaire_quick btn btn-white btn-bitbucket"> <i class="fa fa-plus-circle"></i></a> 
																																																																																																																																																																																													                                                                                                                                                                          </span>#}
														</div>


													</div>
													<div class="hr-line-dashed"></div>
													<div class="form-group row">
														{{ form_label(form.cin ,'cin :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-8 input-group">
															{{ form_widget(form.cin,{'attr':{'class':' form-control form-control-sm','placeholder':'cin'}}) }}

															{#  <span class="input-group-btn">
																																																																																																																																																																																													                                                                                                                                                                              <a title="Ajouter une affaire" class="_t_affaire_quick btn btn-white btn-bitbucket"> <i class="fa fa-plus-circle"></i></a> 
																																																																																																																																																																																													                                                                                                                                                                          </span>#}
														</div>


													</div>
													<div class="hr-line-dashed"></div>
													<div class="form-group row">
														{{ form_label(form.adress ,'adress :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-8 input-group">
															{{ form_widget(form.adress,{'attr':{'class':' form-control form-control-sm','placeholder':'adress'}}) }}

															{#  <span class="input-group-btn">
																																																																																																																																																																																													                                                                                                                                                                              <a title="Ajouter une affaire" class="_t_affaire_quick btn btn-white btn-bitbucket"> <i class="fa fa-plus-circle"></i></a> 
																																																																																																																																																																																													                                                                                                                                                                          </span>#}
														</div>


													</div>
													<div class="hr-line-dashed"></div>
													<div class="form-group row">
														{{ form_label(form.tel ,'tel :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-8 input-group">
															{{ form_widget(form.tel,{'attr':{'class':' form-control form-control-sm','placeholder':'tel'}}) }}

															{#  <span class="input-group-btn">
																																																																																																																																																																																													                                                                                                                                                                              <a title="Ajouter une affaire" class="_t_affaire_quick btn btn-white btn-bitbucket"> <i class="fa fa-plus-circle"></i></a> 
																																																																																																																																																																																													                                                                                                                                                                          </span>#}
														</div>


													</div>
													<div class="hr-line-dashed"></div>
													<div class="form-group row">
														{{ form_label(form.email ,'email :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-8 input-group">
															{{ form_widget(form.email,{'attr':{'class':' form-control form-control-sm','placeholder':'email'}}) }}

															{#  <span class="input-group-btn">
																																																																																																																																																																																													                                                                                                                                                                              <a title="Ajouter une affaire" class="_t_affaire_quick btn btn-white btn-bitbucket"> <i class="fa fa-plus-circle"></i></a> 
																																																																																																																																																																																													                                                                                                                                                                          </span>#}
														</div>


													</div>

												</div>
												<div class="col-md-6">
													<table class="table table-border">
														<thead>

															<tr>
																<td>Nom</td>
																<td>Prenom</td>
																<td>Supprimer</td>
															</tr>
														</thead>
														<tbody>
															{% for information in informations %}
																<tr>
																	<td>{{information ? information.nom : ''}}</td>
																	<td>{{information ? information.prenom : ''}}</td>
																	<td>
																		<i class="fa fa-trash"></i>
																	</td>
																</tr>
															{% endfor %}
														</tbody>
													</table>
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{form_widget(form._token)}}
	{{ form_end(form, {'render_rest': false}) }}
{% endblock %}
