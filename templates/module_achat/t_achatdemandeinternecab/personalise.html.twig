
{% extends 'base_ugouv.html.twig' %}

{% block title %}Personalise   | demande d'achat | Ugouv achat
{% endblock %}


{% block body %}
	<div id="right-sidebar" class="actions animated"></div>


	<div class="personalise">


		{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , "autocomplete":"off", 'class':'form'}}) }}


		<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">

			<div class="col-lg-6">
				{% include './module_achat/t_achatdemandeinternecab/inc/workflow_breadcumb.html.twig' %}
			</div>

			<div class="col-lg-6">
				<div class="title-action">
					{% if workflow_has_marked_place(demande, 'valider') %}
						{% else %}
							<button class="btn btn-white btn-xs btn-lg my-button" data-style="expand-left" type="submit">
								<i class="fa fa-save"></i>
								{{ button_label|default('Enregistrer') }}
							</button>
					{% endif %}
				</div>
			</div>

			<div class="border-b"></div>
			<div class="col-lg-12">
				{% include './module_achat/t_achatdemandeinternecab/inc/workflow.html.twig' %}
			</div>
		</div>
		<br/><br/>

		<div class="row pt-20">
			<div class="col-lg-12 ">
				<div class="ibox">

					<div class="ibox-content">

						<div class="message-success"></div>


						<div class="row m-t-sm">
							<div class="col-lg-12">
								<div class="panel blank-panel">
									<div class="panel-heading">
										<div class="panel-options">
											{% include './module_achat/t_achatdemandeinternecab/inc/navigation.html.twig' %}
										</div>
									</div>

									<div class="panel-body">
										<div class="col-md-12">
											<div class="tab-content">
												<div class="tab-pane active" id="tab-1">


													{% if workflow_has_marked_place(demande, 'valider') %}


														<div class="forum-item animated bounce">
															<div class="row">
																<div class="col-md-9">
																	<div class="forum-icon">
																		<i class="fa fa-warning"></i>
																	</div>
																	<a class="forum-item-title">Important</a>
																	<div class="forum-sub-title">
																		Vous ne pouvez pas modifier une Pre-commande apres la validation ,
																		<br/>veuillez consulter ce lien pour plus d'informations sur cette expression de  besoin
																		<a href="{{ path('t_achatdemandeinternecab_show' , {id:demande.id})}}">{{ demande.code }}</a>
																	</div>
																</div>

															</div>
														</div>

													{% else  %}

														<div class="row">
															<div class="col-md-12">
																<h3 class="m-t-none m-b">Informations Personalise
																</h3>
															</div>
														</div>
														<div class="row">
															<div class="col-md-12 b-r">


																<div class="hr-line-dashed"></div>


																<div class="form-group row">
																	{{ form_label(form.type ,'Type  :', {'label_attr':{'class':'col-sm-2'}}) }}
																	<div class="col-sm-3">
																		{{ form_widget(form.type,{'attr':{'class':'form-control form-control-sm type_commande sel2'}}) }}
																	</div>
																</div>

																<div class="hr-line-dashed {% if demande.type %} {% if demande.type.code != 'PRJ' %} none  {% endif %} {% else %} none {% endif %} pr"></div>

																<div class="form-group row {% if demande.type %} {% if demande.type.code != 'PRJ' %} none  {% endif %} {% else %} none {% endif %} pr">
																	{{ form_label(form.projet ,'Projet :', {'label_attr':{'class':'col-sm-2'}}) }}
																	<div class="col-sm-3">
																		{{ form_widget(form.projet,{'attr':{'class':'sel2 form-control form-control-sm '}}) }}
																	</div>
																</div>

																<div class="hr-line-dashed {% if demande.type %} {% if demande.type.code != 'PRJ' %} none  {% endif %} {% else %} none {% endif %} pr"></div>

																<div class="form-group row {% if demande.type %} {% if demande.type.code != 'PRJ' %} none  {% endif %} {% else %} none {% endif %} pr">
																	{{ form_label(form.sousprojet ,'Sous Projet :', {'label_attr':{'class':'col-sm-2'}}) }}
																	<div class="col-sm-3">

																		{{ form_widget(form.sousprojet,{'attr':{'class':'sel2 form-control form-control-sm'}}) }}
																	</div>
																</div>

																<div class="bloc_marche bloc_choix" {% if demande.type%} {% if demande.type.code == 'MR' %} style="display: block" {% endif %} {% endif %}>
																	<div class="hr-line-dashed"></div>

																	<div class="form-group row">
																		{{ form_label(form.marche ,'Marche  :', {'label_attr':{'class':'col-sm-2'}}) }}
																		<div class="col-sm-3">
																			{{ form_widget(form.marche,{'attr':{'class':'form-control form-control-sm marches sel2'}}) }}
																		</div>
																	</div>
																	<div class="hr-line-dashed"></div>
																	<div class="form-group row">
																		{{ form_label(form.marchesous ,'Sous Marche  :', {'label_attr':{'class':'col-sm-2'}}) }}
																		<div class="col-sm-3">
																			{{ form_widget(form.marchesous,{'attr':{'class':'sousmarche form-control form-control-sm sel2'}}) }}
																		</div>
																	</div>
                                                                </div>
                                                                


                                                                <div class="bloc_investissement bloc_choix" {% if demande.type%} {% if demande.type.code == 'INV' %} style="display: block" {% endif %} {% endif %}>

                                                                    <div class="hr-line-dashed"></div>
        
                                                                    <div class="form-group row">
                                                                        {{ form_label(form.investissementDescription ,'investissement Description  :', {'label_attr':{'class':'col-sm-2'}}) }}
                                                                        <div class="col-sm-4">
                                                                            {{ form_widget(form.investissementDescription,{'attr':{'class':'form-control form-control-sm'}}) }}
                                                                        </div>
                                                                    </div>
        
        
                                                                </div>



                                                                <div style="display: none">


                                                                {{ form_widget(form.dateDemande) }}
                                                                {{ form_widget(form.fournisseur) }}
                                                                {{ form_widget(form.description) }}
                                                                {{ form_widget(form.devise) }}
                                                                {{ form_widget(form.client) }}
                                                                {{ form_widget(form.service) }}
                                                                {{ form_widget(form.montant) }}
                                                                {{ form_widget(form.descriptionDetail) }}
                                                                {{ form_widget(form.autreInformation) }}
                                                              


                                                                </div>

															</div>


														</div>
													</div>
												{% endif %}


											</div>


											{% if demande is defined %}
												<input type="hidden" name="_id" id="_id" value="{{ demande.id }}"/>
											{% endif %}


										</div>
									</div>

								</div>

							</div>
						</div>
					</div>


				</div>


			</div>

		</div>
	</div>

	{{ form_end(form,{'render_rest': false}) }}


	<br/><br/>
</div>{% endblock %}{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('tachatdemandeinternecab') }}{% endblock %}
