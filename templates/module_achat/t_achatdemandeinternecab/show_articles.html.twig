{% extends 'base_achat_ugouv.html.twig' %}
{% block title %}Demande Achat , consulter articles | Achat{% endblock %}
{% block body %}
    <div id="right-sidebar" class="actions animated" >
    </div>

    <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
        <div class="col-lg-4">
            <h2 class="fo">Achat , Demande Achat </h2>
        </div>
        <div class="col-lg-8">
            <div class="title-action">
                <div class="title-action">
                    {#% include './ugouv/achat/t_achatdemandeinternecab/inc/workflow.html.twig' %#}
                </div>   
            </div>
        </div>
        <div class="border-b"></div>
        <div class="col-lg-12">
            {{ wo_render_breadcrumbs() }}
        </div>
    {#    {{ render(controller('App\\Controller\\moduleAchat\\CommandefrsController:showbreadcumb',{ 'commande': commande.id})) }}
   #} 
    </div>
    <br/><br/>
    <div class="row pt-20">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="padding-top: 4px ;">
                    {#{% include './module_achat/commandefrs/inc/workflow_breadcumb.html.twig' %}#}
                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        {% include './ugouv/achat/t_achatdemandeinternecab/inc/navigation.html.twig' %}
                                    </div>
                                </div>
                                <div class="col-md-12" style="padding: 4%; padding-top: 0%;">
                                    <div class="panel-body">
                                        <div class="tab-content">
                                            <div class="tab-pane active show" id="tab-1">
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>Article </th>
                                                            <th>Quantite  </th>
                                                            <th>Prix Unitaire </th>
                                                            <th>TVA :</th>
                                                            <th>Observation :</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {% for detail  in  demande.details %}
                                                            <tr>
                                                                <td>
                                                                    {{ detail.article.titre }}
                                                                </td>
                                                                <td>
                                                                    {{ detail.quantite }}
                                                                </td>
                                                                <td>
                                                                    {{ detail.prixunitaire }}
                                                                </td>
                                                                <td>
                                                                    {{ detail.tva }}
                                                                </td>
                                                                <td>
                                                                    {{ detail.observation }}
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                        {# {% endif %} #}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ render(controller('App\\Controller\\ugouv\\achat\\TAchatdemandeinternecabController:showhistorique',{ 'demande': demande.id})) }}

{% endblock %}







{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('moduleachatcommandefsr') }}
{% endblock %}