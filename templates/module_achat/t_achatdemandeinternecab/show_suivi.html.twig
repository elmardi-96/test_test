{% extends 'base_ugouv.html.twig' %}

{% block title %}Suivi des operations | demande d'achat | Ugouv achat
{% endblock %}

{% block body %}
    <div id="right-sidebar" class="actions animated"></div>

 <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
        <div class="col-lg-12">
            {% include './module_achat/t_achatdemandeinternecab/inc/workflow_breadcumb.html.twig' %}
        </div>
        
        <div class="border-b"></div>
        <div class="col-lg-12">
            {% include './module_achat/t_achatdemandeinternecab/inc/workflow.html.twig' %}
        </div>
    </div>
    <br/><br/>
    
    
    <div class="row pt-20">
        <div class="col-lg-12">
            <div class="ibox">
                <div
                    class="ibox-content" style="padding-top: 4px ;">
                    {#{% include './module_achat/commandefrs/inc/workflow_breadcumb.html.twig' %}#}
                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        {% include './module_achat/t_achatdemandeinternecab/inc/navigation.html.twig' %}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="panel-body">
                                        <div class="tab-content">

                                            <div class="tab-pane active show" id="tab-1">

                                                <div class="col-md-6">
                                                    {% if demande.userUpdated %}
                                                        <h3>Dernière modification</h3>
                                                        <div class="feed-element">
                                                            {% set url = asset('images/user/profil/profil.png') %}
                                                            {% if demande.userUpdated.imageName is not null  %}
                                                                {% set url = asset('images/user/profil/' ~ demande.userUpdated.imageName)  %}
                                                            {% endif %}
                                                            <a class="float-left" href="">
                                                                <img alt="image" class="rounded-circle" src="{{ url }}">
                                                            </a>
                                                            <div class="media-body ">

                                                                <span class="label label-creer float-right label-archive">
                                                                    <i class="fa fa-clock-o" style="font-size: 12.5px;padding: 0px 4px 0px 0px;"></i>Dernière modification</span>
                                                                <a class="text-info" href="#">@{{ demande.userUpdated.username }}</a>
                                                                <strong>{{ demande.userUpdated.nomComplet|capitalize }}</strong>
                                                                <br>
                                                                <small class="text-muted">{{ demande.updated ? demande.updated |date('d-m-Y H:i:s') : '' }}</small>
                                                            </div>
                                                        </div>
                                                        <hr/>
                                                    {% endif %}
                                                    <h4>Le suivi des operations</h4>
                                                    {% if demande.userCreated %}
                                                        <div class="feed-element">
                                                            {% set url = asset('images/user/profil/profil.png') %}
                                                            {% if demande.userCreated.imageName is not null  %}
                                                                {% set url = asset('images/user/profil/' ~ demande.userCreated.imageName)  %}
                                                            {% endif %}
                                                            <a class="float-left" href="">
                                                                <img alt="image" class="rounded-circle" src="{{ url }}">
                                                            </a>
                                                            <div class="media-body ">

                                                                <span class="label label-creer float-right label-creer">Cree</span>
                                                                <a class="text-info" href="#">@{{ demande.userCreated.username }}</a>
                                                                <strong>{{ demande.userCreated.nomComplet|capitalize }}</strong>
                                                                <br>
                                                                <small class="text-muted">{{ demande.created ? demande.created |date('d-m-Y H:i:s') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                    {% if demande.userEncours %}
                                                        <div class="feed-element">
                                                            {% set url = asset('images/user/profil/profil.png') %}
                                                            {% if demande.userEncours.imageName is not null  %}
