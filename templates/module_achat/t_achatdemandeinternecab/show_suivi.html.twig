                                                            </a>
                                                            <div class="media-body ">

                                                                <span class="label label-creer float-right label-encours">En cours</span>
                                                                <a class="text-info" href="#">@{{ demande.userEncours.username }}</a>
                                                                <strong>{{ demande.userEncours.nomComplet|capitalize }}</strong>
                                                                <br>
                                                                <small class="text-muted">{{ demande.dateEncours ? demande.dateEncours |date('d-m-Y H:i:s') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    {% endif %}


                                                    {% if demande.userAnnuler %}
                                                        <div class="feed-element">
                                                            {% set url = asset('images/user/profil/profil.png') %}
                                                            {% if demande.userAnnuler.imageName is not null  %}
                                                                {% set url = asset('images/user/profil/' ~ demande.userAnnuler.imageName)  %}
                                                            {% endif %}
                                                            <a class="float-left" href="">
                                                                <img alt="image" class="rounded-circle" src="{{ url }}">
                                                            </a>
                                                            <div class="media-body ">

                                                                <span class="label label-creer float-right label-annule">Annule</span>
                                                                <a class="text-info" href="#">@{{ demande.userAnnuler.username }}</a>
                                                                <strong>{{ demande.userAnnuler.nomComplet|capitalize }}</strong>
                                                                <br>
                                                                <small class="text-muted">{{ demande.dateAnnuler ? demande.dateAnnuler |date('d-m-Y H:i:s') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    {% endif %}


                                                    {% if demande.userArchiver %}
                                                        <div class="feed-element">
                                                            {% set url = asset('images/user/profil/profil.png') %}
                                                            {% if demande.userArchiver.imageName is not null  %}
                                                                {% set url = asset('images/user/profil/' ~ demande.userArchiver.imageName)  %}
                                                            {% endif %}
                                                            <a class="float-left" href="">
                                                                <img alt="image" class="rounded-circle" src="{{ url }}">
                                                            </a>
                                                            <div class="media-body ">
                                                                <span class="label label-creer float-right label-archive">Archive</span>
                                                                <a class="text-info" href="#">@{{ demande.userArchiver.username }}</a>
                                                                <strong>{{ demande.userArchiver.nomComplet|capitalize }}</strong>
                                                                <br>
                                                                <small class="text-muted">{{ demande.dateArchiver ? demande.dateArchiver |date('d-m-Y H:i:s') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    {% endif %}


                                                    {% if demande.userValider %}
                                                        <div class="feed-element">
                                                            {% set url = asset('images/user/profil/profil.png') %}
                                                            {% if demande.userValider.imageName is not null  %}
                                                                {% set url = asset('images/user/profil/' ~ demande.userValider.imageName)  %}
                                                            {% endif %}
                                                            <a class="float-left" href="">
                                                                <img alt="image" class="rounded-circle" src="{{ url }}">
                                                            </a>
                                                            <div class="media-body ">
                                                                <span class="label label-creer float-right label-valide">Valide</span>
                                                                <a class="text-info" href="#">@{{ demande.userValider.username }}</a>
                                                                <strong>{{ demande.userValider.nomComplet|capitalize }}</strong>
                                                                <br>
                                                                <small class="text-muted">{{ demande.dateValider ? demande.dateValider |date('d-m-Y H:i:s') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    {% endif %}


                                                    {% if demande.userGenerer %}
                                                        <div class="feed-element">
                                                            {% set url = asset('images/user/profil/profil.png') %}
                                                            {% if demande.userGenerer.imageName is not null  %}
                                                                {% set url = asset('images/user/profil/' ~ demande.userGenerer.imageName)  %}
                                                            {% endif %}
                                                            <a class="float-left" href="">
                                                                <img alt="image" class="rounded-circle" src="{{ url }}">
                                                            </a>
                                                            <div class="media-body ">
                                                                <span class="label label-creer float-right label-genere">Genere</span>
                                                                <a class="text-info" href="#">@{{ demande.userGenerer.username }}</a>
                                                                <strong>{{ demande.userGenerer.nomComplet|capitalize }}</strong>
                                                                <br>
                                                                <small class="text-muted">{{ demande.dateGenerer ? demande.dateGenerer |date('d-m-Y H:i:s') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    {% endif %}


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {#{ render(controller('App\\Controller\\ugouv\\achat\\TAchatdemandeinternecabController:showhistorique',{ 'demande': demande.id})) }#}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('tachatdemandeinternecab') }}
{% endblock %}
