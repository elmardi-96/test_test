{% extends 'base_ugouv.html.twig' %}


{% block title %}Conditions | Réglement fournisseur | Ugouv achat
{% endblock %}


{% block body %}


    <div class="new">
        {{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form2'}}) }}
        <div id="right-sidebar" class="actions animated" >


        </div>
        <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


         <div class="col-lg-6">
                {% include './module_achat/t_reglementfrscab/inc/workflow_breadcumb.html.twig' %}
            </div>

            <div class="col-lg-6">
                <div class="title-action">
                    <button class="btn btn-white  btn-xs btn-lg" type="submit"><i class="fa fa-save"></i> {{ button_label|default('Enregistrer') }}</button>

                </div>
            </div>


            <div class="border-b"></div>
            <div class="col-lg-12">
                {% include './module_achat/t_reglementfrscab/inc/workflow.html.twig' %}
            </div>





        </div>
        <br><br>
        <div class="row pt-20">
            <div class="col-lg-12 ">
                <div class="ibox">
                    <div class="ibox-content">

                        <div class="message-success"> </div>



                        <div class="row m-t-sm">
                            <div class="col-lg-12">
                                <div class="panel blank-panel">
                                    <div class="panel-heading">
                                        <div class="panel-options">
                                            {% include './module_achat/t_reglementfrscab/inc/navigation.html.twig' %}

                                        </div>
                                    </div>

                                    <div class="panel-body">
                                        <div class="col-md-12">
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="tab-1">





                                                    <div class="row">
                                                        <div class="col-md-12 b-r">

                                                            <h3 class="m-t-none m-b">Condition Réglement </h3>





                                                            <div class="hr-line-dashed"></div>

                                                            <div class="form-group row">
                                                                {{ form_label(form.conditionreg ,'Condition :', {'label_attr':{'class':'col-sm-2'}}) }} 
                                                                <div class="col-sm-8">
                                                                    {{ form_widget(form.conditionreg,{'attr':{'class':'form-control'}}) }}  
                                                                </div>

                                                            </div>

                                                            <div style="display: none;">
                                                                <div class="form-group row">
                                                                    <div id="test" data-facture-id="{{ t_reglementfrs.id|json_encode }}"></div>
                                                                    {{ form_label(form.datereglement ,'Date Demande Paiement :', {'label_attr':{'class':'col-sm-4'}}) }} 
                                                                    <div class="col-sm-8">
                                                                        {{ form_widget(form.datereglement,{'attr':{'class':'form-control'}}) }}  
                                                                    </div>

                                                                </div>                         <div class="hr-line-dashed"></div>

                                                                <div class="form-group row">
                                                                    {{ form_label(form.mtreglement ,'Date Demande Paiement :', {'label_attr':{'class':'col-sm-4'}}) }} 
                                                                    <div class="col-sm-8">
                                                                        {{ form_widget(form.mtreglement,{'attr':{'class':'form-control'}}) }}  
                                                                    </div>

                                                                </div>

                                                            </div>


                                                            {{ form_end(form,{'render_rest': false}) }}










                                                        </div>






                                                    </div>










                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>



                        </div>
                    </div>

                </div>
            </div></div>

    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('treglementfrscab') }}
{% endblock %}