{% set ma_class =   class|default('') %}


{{ form_start(form_det ,{'attr':{'novalidate': 'novalidate'  , "autocomplete":"off",'class': ma_class~' form-inline test'}}) }}

<table style="width: 100%" id="marche_table" class="m-add t-m table table-striped table-bordered table-hover dataTables-example det_for">

	<tr id="marche_form">

		<td style="width:2%"> </td>

		<td style="width:29%" class='ellast'>
			<select id="{{form_det.article.vars.id}}"
			data-entity="uarticle" 
			data-column="etat_achat" 
			data-placeholder="Choisir les articles" 
			if-selected="{{form_det.article.vars.data ? form_det.article.vars.data.id }}" 
			name="{{form_det.article.vars.full_name}}"
		    class="style-detail-form form-control  sle2 articles form-control-sm selected select2-dropdown--below article"
		    style="color:black">
			</select>

			<!--<i class="fa fa-search rs" id=""></i>-->
			{# <i id="modalActivate" type="button" class="modalActivate fa fa-search rs2" data-toggle="modal" data-target="#exampleModalPreview"></i>
			<i class="fa fa-info-circle observation-icon" data-toggle="tooltip" data-placement="bottom" title="Informations complementaires" aria-hidden="true"></i> #}
		</td>
		
		
		<td style="width: 10%">

			{{ form_widget(form_det.qt,{'attr':{ 'class':'style-detail-form form-control form-control-sm data.quantite quantite','placeholder':'0.00'}}) }}

		</td>

		<td style="width: 10%">

			{{ form_widget(form_det.prixUnitaire,{'attr':{'class':'style-detail-form form-control form-control-sm   prixUnitaire','placeholder':'0.00' }}) }}

		</td>
		<td style="width: 10%">

			{{ form_widget(form_det.tva,{'attr':{'class':'style-detail-form form-control form-control-sm  tva','placeholder':'0.00'}}) }}

		</td>
		<td style="width: 20%">

			{{ form_widget(form_det.observation,{'attr':{'class':'style-detail-form form-control form-control-sm observation','placeholder':'obervation'}}) }}

		</td>
		{# <td style="width: 10%">-</td> #}

		<td style="width: 3%" class="marche_btn_plus">
			{% if tAchatdemandeinternedet is defined %}
				<input type="hidden" name="_id" value="{{ tAchatdemandeinternedet.id }}"/>
			{% endif %}

			{% if t_achatdemandeinternecab is defined %}
				<input type="hidden" name="_id_cab" value="{{ t_achatdemandeinternecab.id }}"/>
			{% endif %}



			<a style="padding: 7px ; " class="btn-icon-detail btn btn-white btn-primary btn-outline  btn-xs my-button2 upper add_form_ua">
				<i class=" fa  fa-plus" aria-hidden="true"></i>
			</a>
		</td>


	</tr>
	<tr class="observation hide">
		<td></td>
		<td colspan="6">
			{{ form_widget(form_det.observation,{'attr':{'class':'style-detail-form-observation form-control form-control-sm ' ,'placeholder':'Informations complementaires'}}) }}
		</td>
	</tr>
</table>
{{ form_end(form_det,{'render_rest': false}) }}

