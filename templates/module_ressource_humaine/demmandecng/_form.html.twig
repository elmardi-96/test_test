{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , "autocomplete":"off", 'class':'form'}}) }}


<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">

	<div class="col-lg-6">
		{% include './module_ressource_humaine/demmandecng/inc/workflow_breadcumb.html.twig' %}
	</div>

	<div class="col-lg-6">
		<div class="title-action">

			<button class="btn btn-white btn-xs btn-lg my-button" data-style="expand-left" type="submit">
				<i class="fa fa-save"></i>
				{{ button_label|default('Enregistrer') }}
			</button>

		</div>
	</div>

	<div class="border-b"></div>
	<div class="col-lg-12">
		{% include './module_ressource_humaine/demmandecng/inc/workflow.html.twig' %}
	</div>
</div>
<br/><br/>

<div class="row pt-20">
	<div class="col-lg-12 ">
		<div class="ibox">

			<div class="ibox-content">

				<div class="message-success"></div>


				<div class="row m-t-sm">
					<div class="col-lg-12">
						<div class="panel blank-panel">
							<div class="panel-heading">
								<div class="panel-options">
									{% include './module_ressource_humaine/demmandecng/inc/navigation.html.twig' %}
								</div>
							</div>

							<div class="panel-body">
								<div class="col-md-12">
									<div class="tab-content">
										<div class="tab-pane active" id="tab-1">


											<div class="row">
												<div class="col-md-12 b-r">
													<h3 class="m-t-none m-b">Informations Charge
													</h3>
												</div>
											</div>
											<div class="row">


												<div class="hr-line-dashed paddi"></div>
												<div class="col-md-6 b-r">


													{% if is_granted('ROLE_ADMIN') %}
														<div class="form-group row">
															{{ form_label(form.userDemande ,'Demandé pour  :', {'label_attr':{'class':'col-sm-4'}}) }}
															<div class="col-sm-4">
																{{ form_widget(form.userDemande,{'attr':{'class':'form-control form-control-sm'}}) }}
																<span class="form-error-message">
																	{{ form_errors(form.userDemande) }}
																</span>
															</div>
														</div>
														<div class="hr-line-dashed"></div>
													{% endif %}

													<div class="form-group row">
														{{ form_label(form.dateDebut ,'Date début :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-4">
															{{ form_widget(form.dateDebut,{'attr':{'class':'form-control form-control-sm','placeholder': 'Date début'}}) }}
															<span class="form-error-message">
																{{ form_errors(form.dateDebut) }}
															</span>
														</div>
													</div>
													<div class="hr-line-dashed"></div>

													<div class="form-group row">
														{{ form_label(form.dateFin ,'Date fin :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-4">
															{{ form_widget(form.dateFin,{'attr':{'class':'form-control form-control-sm','placeholder': 'Date fin'}}) }}
															<span class="form-error-message">
																{{ form_errors(form.dateFin) }}
															</span>
														</div>
													</div>

												</div>


												<div class="hr-line-dashed paddi"></div>

												<div class="col-md-6">

													<div class="form-group row">
														{{ form_label(form.type ,'Type :', {'label_attr':{'class':'col-sm-4'}}) }}
														<div class="col-sm-4">
															{{ form_widget(form.type,{'attr':{'class':'form-control form-control-sm paiement','placeholder': 'Type'}}) }}
															<span class="form-error-message">
																{{ form_errors(form.type) }}
															</span>
														</div>
													</div>
														<div class="hr-line-dashed"></div>
														<div class="form-group row">
															{{ form_label(form.description ,'Description :', {'label_attr':{'class':'col-sm-4'}}) }}
															<div class="col-sm-4">
																{{ form_widget(form.description,{'attr':{'class':'form-control form-control-sm','placeholder': 'Description'}}) }}
																<span class="form-error-message">
																	{{ form_errors(form.description) }}
																</span>
															</div>
														</div>
														<br>

													</div>


												</div>


											</div>


											{% if grs_conge is defined %}
												<input type="hidden" name="_id" id="_id" value="{{ grs_conge.id }}"/>
											{% endif %}


										</div>
									</div>

								</div>

							</div>
						</div>
					</div>


				</div>


			</div>

		</div>
	</div>

	{{ form_end(form,{'render_rest': false}) }}

