{% extends 'base_univ.html.twig' %}

{% block title %}Modifier | Concours | UNIV{% endblock %}

{% block body %}
    {{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}
    {% include './module_univ/concours/inc/message_flash.html.twig' %}


    <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


        <div class="col-lg-3">

            <h2 class="fo">Univ, Concours</h2>


        </div>


        <div class="col-lg-9">
            <div class="title-action">
                <button class="btn btn-white btn-xs btn-lg my-button" data-style="expand-left" type="submit">
                    <i class="fa fa-save"></i>
                    {{ button_label|default('Enregistrer') }}</button>
                    {% if  concours.id > 0 %}
                    <div id="test" data-etablissement-id="{{ concours.id|json_encode }}"></div>

                {% endif  %}
            </div>
        </div>

        <div class="border-b"></div>
        <div class="col-lg-12">

            {{ wo_render_breadcrumbs() }}
        </div>
    </div>


    <br/><br/>


    <div class="row pt-20">
        <div class="col-lg-12 ">
            <div class="ibox">

                <div class="ibox-content">

                    <div class="message-success"></div>


                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        {% if concours.avecConcours==true %}
                                            {% include './module_univ/concours/inc/ac_navigation.html.twig' %}
                                        {% else %}
                                            {% include './module_univ/concours/inc/sc_navigation.html.twig' %}
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="panel-body">
                                    <div class="col-md-12">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab-1">




                                                {% include './module_univ/concours/p_concourscab/inc/navigation.html.twig' %}

                                                <div class="tab-content">
                                                    <div class="tab-pane fade show active">
                                                        <div class="row m-2">
                                                            <div class="col-md-6 b-r">
                                                                <h3 class="m-t-none m-b">Informations concours </h3>
                                                                <div class="hr-line-dashed"></div>
                                                                <div class="form-group row">
                                                                    {{ form_label(form.designation ,'Designation:', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-9">
                                                                        {{ form_widget(form.designation,{'attr':{'class':'form-control form-control-sm','placeholder': 'designation'}}) }}
                                                                        <span class="form-error-message">
                                                                            {{ form_errors(form.designation) }}
                                                                        </span>
                                                                    </div>

                                                                </div>
                                                                <div class="hr-line-dashed"></div>
                                                                <div class="form-group row">
                                                                    {{ form_label(form.abreviation ,'Abreviation:', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-9">
                                                                        {{ form_widget(form.abreviation,{'attr':{'class':'form-control form-control-sm','placeholder': 'Abreviation'}}) }}
                                                                        <span class="form-error-message">
                                                                            {{ form_errors(form.abreviation) }}
                                                                        </span>
                                                                    </div>

                                                                </div>

                                                                <div class="hr-line-dashed"></div>
                                                                <div class="form-group row">
                                                                    {{ form_label(form.annee ,'Année:', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-2">
                                                                        {{ form_widget(form.annee,{'attr':{'class':'form-control form-control-sm','placeholder': 'Année'}}) }}
                                                                        <span class="form-error-message">
                                                                            {{ form_errors(form.annee) }}
                                                                        </span>
                                                                    </div>

                                                                </div>


                                                                <div class="hr-line-dashed"></div>
                                                                <div class="form-group row">
                                                                    {{ form_label(form.date ,'Date concours :', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-4">
                                                                        {{ form_widget(form.date,{'attr':{'class':'form-control form-control-sm','placeholder': 'Date début'}}) }}
                                                                        <span class="form-error-message">
                                                                            {{ form_errors(form.date) }}
                                                                        </span>
                                                                    </div>

                                                                </div>
                                                                <div class="hr-line-dashed"></div>
                                                                <div class="form-group row">
                                                                    {{ form_label(form.heure ,'Heure début :', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-2">
                                                                        {{ form_widget(form.heure,{'attr':{'class':'form-control form-control-sm','placeholder': 'Date fin'}}) }}
                                                                        <span class="form-error-message">
                                                                            {{ form_errors(form.heure) }}
                                                                        </span>
                                                                    </div>

                                                                </div>

                                                                <div class="hr-line-dashed"></div>
                                                                <div class="form-group row">
                                                                    {{ form_label(form.heureFin ,'Heure Fin :', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-2">
                                                                        {{ form_widget(form.heureFin,{'attr':{'class':'form-control form-control-sm','placeholder': 'Date fin'}}) }}
                                                                        <span class="form-error-message">
                                                                            {{ form_errors(form.heureFin) }}
                                                                        </span>
                                                                    </div>

                                                                </div>
                                                                <div class="hr-line-dashed"></div>

                                                                <div class="hr-line-dashed"></div>

                                                                <div class="form-group row">
                                                                    {{ form_label(form.avecConcours ,'Avec Concours :', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-9">
                                                                        {{ form_widget(form.avecConcours) }}
                                                                    </div>
                                                                </div>


                                                                <div class="hr-line-dashed"></div>

                                                                <div class="form-group row">
                                                                    {{ form_label(form.active ,'Active :', {'label_attr':{'class':'col-sm-3 col-form-label'}}) }}
                                                                    <div class="col-sm-9">
                                                                        {{ form_widget(form.active) }}
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>







                                                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                                                        <div class="row m-2">
                                                            2
                                                        </div>
                                                    </div>
                                                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                                                        <div class="row m-2">



                                                        </div>
                                                    </div>
                                                    <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                                                        <div class="row m-2">

                                                            3

                                                        </div>
                                                    </div>
                                                </div>


                                            </div>





















                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>
    {{form_widget(form._token)}}
    {{ form_end(form,{'render_rest': false}) }}




    {#    {{ include('univ_p_concourscab/_delete_form.html.twig') }}#}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('univ_p_concours') }}
{% endblock %}