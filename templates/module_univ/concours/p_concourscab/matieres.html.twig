{% extends 'base_univ.html.twig' %}

{% block title %}Modifier matières | Concours | UNIV{% endblock %}

{% block body %}
    {{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}

    {% include './module_univ/concours/inc/message_flash.html.twig' %}
    
    <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


        <div class="col-lg-3">

            <h2 class="fo">Univ, Concours</h2>


        </div>


        <div class="col-lg-9">
            <div class="title-action">
                <button class="btn btn-white btn-xs btn-lg my-button" data-style="expand-left" type="submit">
                    <i class="fa fa-save"></i>
                    {{ button_label|default('Enregistrer') }}</button>
                    {% if  concours.id > 0 %}
                    <!-- <a href="#" class="btn btn-xs btn-danger btn-outline" id="_delete"><i class="fa fa-trash"></i> Supprimer</a>-->
                    <div id="test" data-etablissement-id="{{ concours.id|json_encode }}"></div>

                {% endif  %}
            </div>
        </div>

        <div class="border-b"></div>
        <div class="col-lg-12">

            {{ wo_render_breadcrumbs() }}
        </div>
    </div>


    <br/><br/>


    <div class="row pt-20">
        <div class="col-lg-12 ">
            <div class="ibox">

                <div class="ibox-content">

                    <div class="message-success"></div>


                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        {% include './module_univ/concours/inc/ac_navigation.html.twig' %}


                                    </div>
                                </div>

                                <div class="panel-body">
                                    <div class="col-md-12">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab-1">
                                                {% include './module_univ/concours/p_concourscab/inc/navigation.html.twig' %}
                                                <div class="tab-content">
                                                    <div class="tab-pane fade show active">
                                                        <div class="row m-2">
                                                            <div class="col-md-6 b-r">
                                                                <h3 class="m-t-none m-b">Informations matière </h3>

                                                                <div class="hr-line-dashed"></div>
                                                                <div class="form-group row">
                                                                    <label class="col-sm-4 required "> {{ form_label(form.matieres ,'Matière :', {'label_attr':{'class':'col-sm-12'}}) }}</label> 
                                                                    <div class="col-sm-8 ">
                                                                        {{ form_widget(form.matieres,{'attr':{'class':'form-check-inline form-control select2_dossiers'}}) }}
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6 b-r">
                                                                <h3 class="m-t-none m-b">liste Matières </h3>
                                                                <div class="hr-line-dashed hr-line-dashed-co"></div>






                                                                <table class="t-m table table-striped table-bordered table-hover w-m dataTable datatable-default" id="datatable-show3">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>#</th>
                                                                            <th>code</th>
                                                                            <th>Matiére</th>
                                                                            <th>abreviation</th>
                                                                            
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>

                                                                        {% for key , matiere in concours.matieres %}
                                                                            <tr>
                                                                                <td>{{key +1 }}</td>
                                                                                <td>{{matiere.code}}</td>    
                                                                                <td>{{matiere.designation}}</td>    
                                                                                <td>{{matiere.abreviation}}</td> 
                                                                        {#<a style="float:right" class="_delete_preinscription fa fa-trash-o"></a>#}
                                                                        </tr>
                                                                    {% endfor %}
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                            {#end content#}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{form_widget(form._token)}}
    {{ form_end(form,{'render_rest': false}) }}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('univ_p_concours') }}
{% endblock %}










