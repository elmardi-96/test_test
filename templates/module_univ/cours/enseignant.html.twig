{% extends 'base_univ.html.twig' %}
{% block title %}Consulter Enseignant | Planning & programmation | UNIV
{% endblock %}
{% block body %}
{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'_enseignant'}}) }}
<div id="right-sidebar" class="actions animated"></div>

<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
	<div class="col-lg-4">
		<h2 class="fo">Univ , Enseignant
		</h2>
	</div>
	<div class="col-lg-8">
		<div
			class="title-action">
			{#% include './module_achat/facturefrs/inc/workflow.html.twig' %#}
			<button class="btn btn-white btn-xs btn-lg my-button " data-style="expand-left" type="submit">
				<i class="fa fa-save"></i>
				{{ button_label|default('Enregistrer') }}</button>

		</div>
	</div>
	<div class="border-b"></div>
	<div class="col-lg-12">
		{{ wo_render_breadcrumbs() }}
	</div>
	{#{{ render(controller('App\\Controller\\moduleAchat\\CommandefrsController:showbreadcumb',{ 'commande': commande.id})) }}
			                        #}

</div>
<br/><br/>

<div class="row pt-20">
	<div class="col-lg-12">
		<div class="ibox">
			<div
				class="ibox-content" style="padding-top: 4px ;">

				{#{% include './module_achat/facturefrs/inc/workflow_breadcumb.html.twig' %}#}

				<div class="row m-t-sm">
					<div class="col-lg-12">
						<div class="panel blank-panel">
							<div class="panel-heading">
								<div class="panel-options">
									{% include './module_univ/cours/inc/navigation.html.twig' %}
								</div>
							</div>
							<div class="col-md-12">
								<div class="panel-body">

									<div class="tab-content">
										<div class="tab-pane active show" id="tab-1">
											<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
												<a class="nav-link   " href="{{ path('module_univ_cours_edit' , {id:UnivPlEmptime.id})}}">
													<i class="fa fa-pencil"></i>
													Cours
												</a>
												<a class="nav-link active" href="{{ path('module_univ_cours_enseignant' , {id:UnivPlEmptime.id})}}">
													<i class="fa fa-address-book-o"></i>
													Enseignants
												</a>

											</div>

											<div class="row m-2">
												<div class="col-md-4 b-r">
													<h3 class="m-t-none m-b">INFORMATIONS enseignant
													</h3>


													<div class="hr-line-dashed"></div>
													<div class="form-group row">
														<label class="col-sm-4 required ">
															{{ form_label(form.enseignant ,'Enseignant ', {'label_attr':{'class':'col-sm-12'}}) }}</label>
														<div class="col-sm-8 ">

															{{ form_widget(form.enseignant,{'attr':{'class':'form-check-inline form-control select2_dossiers','placeholder':'Choix d\'enseignant ...'}}) }}
                                                            </div>


                                                        </div>


                                                    </div>
                                                    <div class="col-md-8">
                                                        <h3 class="m-t-none m-b">liste enseignants 
                                                        </h3>
                                                        <div class="hr-line-dashed hr-line-dashed-co"></div>
                                                        <table class="t-m table table-striped table-bordered table-hover w-m dataTables-example dataTable" id="datatable-show2">
														<thead>
															<tr>
																<th style="width:5%">#</th>
																<th style="width:10%">Code</th>
																<th style="width:35%">Nom
																</th>
																<th style="width:20%">Pr√©nom</th>
																<th style="width:5%">Nature
																</th>
															</tr>
														</thead>
														<tbody>

															{% for ens  in  UnivPlEmptime.enseignants %}
																<tr>
																	<td>
																		{{ loop.index }}
																	</td>
																	<td>
																		{{ ens.enseignant.code}}
																	</td>
																	<td>
																		{{ ens.enseignant.nom }}
																	</td>
																	<td>
																		{{ ens.enseignant.prenom}}
																	</td>
																	<td>
																		{{ ens.enseignant.nature }}
																	</td>
																	
																</tr>
															{% endfor %}
														
														</tbody>
													</table>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if UnivPlEmptime is defined %}
        <input type="hidden" name="_id" value="{{ UnivPlEmptime.id }}"/>
    {% endif %}

    {#{ render(controller('App\\Controller\\moduleAchat\\MaFacturefrscabController:showhistorique',{ 'facture': facture.id})) }#}
    {{ form_end(form) }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('univ_planning') }}
{% endblock %}
