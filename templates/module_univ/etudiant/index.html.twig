{% block body %}


	<div id="right-sidebar" class="actions animated"></div>


	<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


		<div class="col-lg-6">
			<div class="row">
				<div class="btn-group btn-breadcrumb btn-breadcrumb2">
					<a href="#" class="btn btn-default">
						<b>Univ , Etudiant
						</b>
					</a>
				</div>
			</div>
		</div>

		<div class="col-lg-6">
			<div class="title-action" style="margin-top: 5px; margin-bottom:5px;">
				{% for key ,  operation in operations  %}
					{% if operation.prefix == '_import' or operation.prefix == '_new' %}
						<a {% if operation.route is not null %} href="{{ path(operation.route) }}" {% else %} data-toggle="modal" data-target="#exampleModalPreview" {% endif %} class='btn btn-white btn-xs {{operation.classCs}}'>
							<i class="fa {{ operation.icon }}"></i>
							{{ operation.titre|capitalize }}</a>
					{% endif %}
				{% endfor %}
			</div>


		</div>

		<div class="border-b"></div>
		<div class="col-lg-12">
			{{ wo_render_breadcrumbs() }}
		</div>


	</div>
