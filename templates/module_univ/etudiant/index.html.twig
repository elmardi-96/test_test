	<br/><br/>
	<div class="row border-bottom white-bg dashboard-header mt-20">
		<div class="col-lg-12">

			<div class="ibox ">
				<div class="ibox-content" style="padding-top: 0px">
					<div class="table-responsive">
						<div class="row">
							<div class="col-2">
								<select class="form-control _multiple_actions" style="display: none">
									<option value="">Action</option>
									<option value="_genener_statut">Statut Téléphone</option>
								</select>
							</div>

						</div>

						<table class="table  display table-striped table-bordered table-hover dataTables-example" id="grid" style="width: 100%">
							<thead>
								<tr>
									<th>#</th>
									<th>Code</th>
									<th>Nom</th>
									<th>Prénom</th>
									<th>Catégorie</th>
									<th>Type de bac</th>
									<th>Note</th>
									<th>Tél 1</th>
									<th>Tél 2</th>
									<th>Valider</th>
									<th>Statut</th>
									<th>St.Tel</th>
									<th>Nbr.tel</th>
									<th>Rég</th>
									<th>Obs</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>#</th>
									<th>Code</th>
									<th>Nom</th>
									<th>Prénom</th>
									<th>Catégorie</th>
									<th>Type de bac</th>
									<th>Note</th>
									<th>Tél 1</th>
									<th>Tél 2</th>
									<th>Valider</th>
									<th>Statut</th>
									<th>St.Tel</th>
