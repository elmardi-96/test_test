                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            
                            {% for etu in etudiants %}
                            
                            <input type="hidden"  class="etudiantt" name="_etudiantt[]" value="{{etu}}">
                            {% endfor %}
                        </div>
                       
                        <br/>
                      
                        <button type="submit" class="btn btn-white btn-block btn-xs my-button"><i class="fa fa-save"></i> Enregistrer</button>
                    </form>





                    </div>
                </div>
            </div>
        </div>
