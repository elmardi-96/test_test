{% extends 'base_univ.html.twig' %}
{% block title %}Epreuve | Univ
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('univ_module_moyenne') }}
{% endblock %}


{% block body %}


	<div id="right-sidebar" class="actions animated"></div>

    <input id="save_etudiants" type="hidden" module-id="{{module.id}}" />
	<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
		<div class="col-lg-6">
			{% include './module_univ/evaluation/module/inc/workflow_breadcumb.html.twig' %}
		</div>
		<div class="col-lg-6">
        {% if etudiants == false %}
			<div class="title-action">
				<button class="btn btn-white btn-xs btn-lg my-button _save_module waves-effect waves-light" data-style="expand-left">
					<i class="fa fa-save"></i>
					Enregistrer</button>
			</div>
        {% endif %}
		</div>

		<div class="border-b"></div>
		<div class="col-lg-12">
			{% include './module_univ/evaluation/module/inc/workflow.html.twig' %}
		</div>
	</div>
	<br/><br/>
	<div class="row pt-20">
		<div class="col-lg-12">
			<div class="ibox">
				<div class="ibox-content" style="padding-top: 4px ;">


					<div class="row m-t-sm">
						<div class="col-lg-12">
							<div class="panel blank-panel">
								<div class="panel-heading">
									<div class="panel-options">
										{% include './module_univ/evaluation/module/inc/navigation.html.twig' %}

									</div>
								</div>
								<div class="col-md-12 scroll_content">
									<div class="panel-body">
										<div class="tab-content">
											<div class="tab-pane active show" id="tab-1">
												<div class="row">
													{% if etudiants == false %}
														<div class="alert alert-primary inform" role="alert">
															<i class="fa fa-info-circle"></i>
															Merci d'enregistrer les étudiants !
														</div>
														{% else %}
                                                        <div class="col-md-12">
                                                            {#{dump(etudiants)}#}
                                                            <table class="table  display table-bordered table-hover dataTables-example" id="grid_epreuve_liste">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Id</th>
                                                                        <th>Code</th>
                                                                        <th>Nom</th>
                                                                        <th>Prénom</th>
                                                                    </tr>
                                                                </thead>
                                                            </table>
                                                        </div>
													{% endif %}


												</div>


											</div>
										</div>

									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal -->
{% endblock %}


{% block javascripts %}
	{#{ parent() }#}
	{{ encore_entry_script_tags('univ_module_moyenne') }}
{% endblock %}
