<div class="row">
	<div class="col-lg-12">
		<div class="ibox">
			<div
				class="ibox-title m-min"><!--<h5>La liste des Articles</h5>-->
			</div>
			<div class="ibox-content">
				<div class="table-responsive">
					<div class="col-md-12">
						<h5 class="m-left">La liste des groupes étudiants</h5><br/><br/>

						{%if message==1%}
							<div class="alert alert-block alert-success">
								<button type='button' class='close'>
									<i class='ace-icon fa fa-times fons'></i>
								</button>
								<p class="para">
									<i class='ace-icon fa fa-check'></i> enregistrement a été effectué avec succès.</p>
							</div>
							{%else%}
							<div class="alert alert-block alert-warning">
								<button type='button' class='close'>
									<i class='ace-icon fa fa-times fons'></i>
								</button>
								<p class="para">
									<i class='ace-icon fa fa-check '></i> résultat de recherche
								</p>
							</div>
							{%endif%}
							<div class="">
								{%for Detail in DivisionGroupeDetail %}


									<h3 class=" blue lighter smaller">
										<i class="ace-icon fa fa-group smaller-90 back-et"></i>
										{{Detail.designation}}
									</h3>

									<table class="t-m table table-striped table-bordered table-hover display w-m dataTables-example dataTable" id="datatable-show">
										<thead>
											<tr>
												<th style="width:30% ; background: transparent">code Inscripion</th>
												<th style="width:30% ; background: transparent">code admission</th>
												<th style="width:30% ">Nom</th>
												<th style="width:40% ">Prénom</th>

											</tr>
										</thead>
										<tbody>

											{% for Etudiant in EtudiantGroupe %}


												{# {{Etudiant.divisionGroupeDetail}}#}
												{% if Detail == Etudiant.divisionGroupeDetail %}

													<tr>
														<td>{{Etudiant.inscription.code}}
														</td>
														<td>{{Etudiant.inscription.admission.code}}</td>
														<td>
															{% if Etudiant.inscription.admission.preinscription.etudiant.prenom is defined %}
																{{ Etudiant.inscription.admission.preinscription.etudiant.prenom }}
															{% else %}
																-
															{% endif %}
														</td>
														<td>
															{% if Etudiant.inscription.admission.preinscription.etudiant.nom is defined %}
																{{ Etudiant.inscription.admission.preinscription.etudiant.nom }}
															{% else %}
																-
															{% endif %}
														</td>

													</tr>
												{% endif %}

											{% endfor %}

										</tbody>
									</table>


									{%endfor%}
								</div>
							</div>
						</div>
						<!--<span class="float-right">
																																			                                                                                                                        <b>Total :
																																			                                                                                                                                {"{total}#}</b>
																																			                                                                                                                </span>-->

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>

	$(document).ready(function () {
$('table.display').DataTable({
"iDisplayLength": 10,
"lengthMenu": [
[
10,
15,
25,
50,
100,
200,
20000000
],
[
10,
15,
25,
50,
100,
200,
"All"
]
],
"order": [
[0, "asc"]
],
"columnDefs": [
{
"orderable": false,
"targets": 1
}
],
"language": {
"url": "{{ asset('assets/js/jquery.dataTablesFrench.json') }}",
"processing": true
}

});
});
</script></tbody>
