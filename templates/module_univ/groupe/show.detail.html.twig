{% extends 'base_univ.html.twig' %}
{% block title %}Etudiant , Groupe detail information | Univ
{% endblock %}
{% block body %}
	<div id="right-sidebar" class="actions animated"></div>

	<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
		<div class="col-lg-4">
			<h2 class="fo">Univ , Groupe detail information
			</h2>
		</div>
		<div class="col-lg-8">
			<div
				class="title-action">
				{#% include './module_univ/cours/inc/workflow.html.twig' %#}
				<a href="{{path('module_univ_divisionGroupe_modifier_detail', {'id' : UnivDivisionGroupeDetail.id})}}" class="btn btn-white btn-xs btn-lg">
					<i class="fa fa-pencil"></i>
					Modifier</a>

			</div>
		</div>
		<div class="border-b"></div>
		<div class="col-lg-12">
			{{ wo_render_breadcrumbs() }}
		</div>
		{#{{ render(controller('App\\Controller\\moduleAchat\\CommandefrsController:showbreadcumb',{ 'commande': commande.id})) }}
																																												#}

	</div>
	<br/><br/>
	<div class="row pt-20">
		<div class="col-lg-12">
			<div class="ibox">
				<div class="ibox-content">

					{#{% include './module_achat/facturefrs/inc/workflow_breadcumb.html.twig' %}#}
					{#% include './module_univ/cours/inc/workflow_breadcumb.html.twig' %#}
						<div class="row m-t-sm"> <div class="col-lg-12">
							<div class="panel blank-panel">
								<div class="panel-heading">
									<div class="panel-options">
										{% include './module_univ/groupe/inc/navigation.detail.html.twig' %}
									</div>
								</div>
								<div class="col-md-12">
									<div class="panel-body">

										<div class="tab-content">
											<div class="tab-pane active show" id="tab-1">
												<div class="row">
													<div class="col-md-6 b-r">
														<h3 class="m-t-none m-b">Informations
														</h3>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Id</label>
															<div class="col-sm-8">
																<p class="form-control-static">{{ UnivDivisionGroupeDetail.id }}</p>
															</div>
														</div>
														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Code</label>
															<div class="col-sm-8">
																<p class="form-control-static">{{ UnivDivisionGroupeDetail.code }}</p>
															</div>
														</div>
														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Désignation</label>
															<div class="col-sm-8">
																<p class="form-control-static">{{ UnivDivisionGroupeDetail.designation }}</p>
															</div>
														</div>
														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Abréviation</label>
															<div class="col-sm-8">
																<p class="form-control-static">{{ UnivDivisionGroupeDetail.abreviation }}</p>
															</div>
														</div>
														{% if EtudiantGroupeInf %}
														<br/>
															<h3 class="m-t-none m-b">Information académique
															</h3>
															<div class="hr-line-dashed hr-line-dashed-co"></div>
															<div class="form-group row ph">
																<label class="col-sm-4 required font-weight-bold font-weight-bold">Etablissement</label>
																<div class="col-sm-8">
																	<p class="form-control-static">{{EtudiantGroupeInf.promotion ? EtudiantGroupeInf.promotion.formation.etablissement.designation : ''}}</p>
																</div>
															</div>
															<div class="hr-line-dashed hr-line-dashed-co"></div>
															<div class="form-group row ph">
																<label class="col-sm-4 required font-weight-bold font-weight-bold">Formation</label>
																<div class="col-sm-8">
																	<p class="form-control-static">{{EtudiantGroupeInf.promotion ? EtudiantGroupeInf.promotion.formation.designation : ''}}</p>
																</div>
															</div>
															<div class="hr-line-dashed hr-line-dashed-co"></div>
															<div class="form-group row ph">
																<label class="col-sm-4 required font-weight-bold font-weight-bold">Promotion</label>
																<div class="col-sm-8">
																	<p class="form-control-static">{{EtudiantGroupeInf.promotion ? EtudiantGroupeInf.promotion.designation : ''}}</p>
																</div>
															</div>
														{% endif %}

													</div>
													<div class="col-md-6">
														<h3 class="m-t-none m-b">Les étudiants de ce groupe
														</h3>
														<div class="hr-line-dashed"></div>
														{% if EtudiantGroupe %}
															<table class="t-m table table-striped table-bordered table-hover display w-m dataTables-example dataTable" id="datatable-show2">
																<thead>
																	<tr>

																		<th width="20%">Etablissement</th>
																		<th width="15%">Formation</th>
																		<th width="15%">Promotion</th>
																		<th width="15%">Groupe</th>
																		<th width="15%">date création</th>

																	</tr>
																</thead>
																<tbody>
																	{% for detail in EtudiantGroupe %}
																		<tr>

																			<td>{{detail.promotion ? detail.promotion.formation.etablissement.designation : ''}}</td>
																			<td>{{detail.promotion ? detail.promotion.formation.designation : ''}}</td>
																			<td>{{detail.promotion ? detail.promotion.designation : ''}}</td>
																			<td>{{detail.divisionGroupeDetail.divisionGroupe ? detail.divisionGroupeDetail.divisionGroupe.designation : ''}}</td>
																			<td>{{detail.created|date("m/d/Y")}}</td>

																		</tr>
																	{% endfor %}

																</tbody>

															</table>
														{% else %}
														<br/>
															<div class="">
																<div class="alert alert-warning">
																	Cette séance n'appartiant à aucune groupe.
																</div>


															</div>
														{% endif %}
													</div>
												</div>
											</div>
										</div>
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	{#{ render(controller('App\\Controller\\moduleAchat\\MaFacturefrscabController:showhistorique',{ 'facture': facture.id})) }#}

{% endblock %}


{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('univ_groupe') }}
{% endblock %}
