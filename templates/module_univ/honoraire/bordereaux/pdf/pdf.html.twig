<page backtop="50mm" backbottom="10mm">
	<page_header>


		<h3 style="text-align: center ; margin-bottom: 5px">ETAT DES HONORAIRES PAR PROFESSEUR</h3>
		<p style="text-align: center ; margin: 0px ; font-size: 14px ; font-weight: bold">{{bordereaux.promotion.formation.etablissement ? bordereaux.promotion.formation.etablissement.designation}}</p>
		<p style="text-align: center ; margin: 0px ; font-size: 14px ;">{{bordereaux.promotion.formation ? bordereaux.promotion.formation.designation}}</p>
		<p style="text-align: center ; margin: 0px ; font-size: 14px ;">{{bordereaux.promotion ? bordereaux.promotion.designation}}</p>


		<table class="inf" style="width: 50%; text-align: left; font-size:10px ; font-weight:bold ; font-size: 12px">

			<tr>
				<td style="width: 50% ;border-bottom: 1px solid black; padding-bottom: 10px;">ID_BE :
					{{bordereaux.code}}</td>

			</tr>
			<tr>
				<td style="border-bottom: 1px solid black; padding-bottom: 10px;">DATE_BE :
					{{bordereaux.created ? bordereaux.created|date("m/d/Y")}}</td>

			</tr>
			<tr>
				<td style="border-bottom: 1px solid black; padding-bottom: 10px;">NIVEAU :</td>

			</tr>


			<tr>
				<td style="border-bottom: 1px solid black; padding-bottom: 10px;">SEMAINE
					{{bordereaux.semaine}}</td>

			</tr>


		</table>


	</page_header>


	<table style="width:100%">
		<tr>
			<td>
				<table style="width: 100% ; background: #FFFFFF;font-size: 9.2px; float: left;" cellspacing="0" class="slh">
					<thead>

						<tr style="background-color: black;color:white;font-size: 9px;">
							<th style="padding:3px;border-right:1px solid white;font-weight: bold;width:20px">N°</th>
							<th style="padding:3px;border-right:1px solid white;font-weight: bold;width:170px">PROFESSEUR</th>
							<th style="padding:3px;border-right:1px solid white;font-weight: bold;width:70px">NOM</th>
							<th style="padding:3px;border-right:1px solid white;font-weight: bold;width:70px">PRENOM</th>
							<th style="padding:3px;border-right:1px solid white;font-weight: bold;width:70px">GRADE</th>
							<th style="padding:3px;border-right:1px solid white;font-weight: bold;width:70px">MONTANT</th>

						</tr>

					</thead>
					<tbody>

						{% set c = 0 %}
						{% set totale = 0 %}
						{% for reg in bordereaux.univHHonens %}
							{% set c = c + 1 %}
							{% set totale =  totale + reg.montant %}
							<tr>
								<td style="padding:3px;border-right:1px solid white;text-align: left;">{{c}}</td>
								<td style="padding:3px;border-right:1px solid white;text-align: left;">{{reg.enseignant.code}}</td>
								<td style="padding:3px;border-right:1px solid white;text-align: left;">{{reg.enseignant.nom}}</td>
								<td style="padding:3px;border-right:1px solid white;text-align: right;">{{reg.enseignant.prenom}}</td>
								<td style="padding:3px;border-right:1px solid white;text-align: right;">{{reg.enseignant.grade ? reg.enseignant.grade.designation }}</td>
								<td style="padding:3px;border-right:1px solid white;text-align: right;">{{reg.montant|number_format(2)}}
								</td>
							</tr>
						{% endfor %}

						<tr>
							<td style="padding:3px;border-right:1px solid white;text-align: left;"></td>
							<td style="padding:3px;border-right:1px solid white;text-align: left;"></td>
							<td style="padding:3px;border-right:1px solid white;text-align: left;"></td>
							<td style="padding:3px;border-right:1px solid white;text-align: right;"></td>
							<td style="padding:3px;border-right:1px solid white;text-align: right;"></td>
							<td style="padding:3px;border-right:1px solid white;text-align: right; font-weight: bold;font-size: 12px">{{totale|number_format(2)}}</td>
						</tr>
					</tbody>

				</table>
			</td>
			<td style=" width: 30% ;align-content: center">
				<table style="margin-left: 20px;width: 50% ; background: #FFFFFF;font-size: 9.2px ;" cellspacing="0">

					<tr>

						<td style="padding: 5px">signature :</td>
					</tr>
					<tr>
						<td style="border: 1px solid ;width: 50px ;height: 50px ; padding: 10px;"></td>

					</tr>

				</table>
			</td>
		</tr>
	</table>


	<br/><br/><br/>
	<br/><br/><br/>


	<table style="width: 95% ; background: #FFFFFF;font-size: 9.2px" cellspacing="0" class="slh">
		<thead>
			<tr style="background-color: black;color:white;font-size: 9px;">
				<th style="padding:3px;border-right:1px solid white;font-weight: bold; width: 5px">N°</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold; width: 80px">ID_COURS</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold; width: 100px">PROFESSEUR</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 30px">D_SEANCE</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 25px ">DUREE</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 25px">HR_D</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 25px">HR_F</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 30px">CLS_GRP</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 320px">MODULE/MATIERE</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 20px">TYPE</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 20px">GENRE</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 30px">EFFECTIVE</th>
				<th style="padding:3px;border-right:1px solid white;font-weight: bold;width: 20px">MT</th>
			</tr>
		</thead>
		<tbody>

			{% set c = 0 %}
			{% set totale = 0 %}
			{% for reglement in bordereaux.univHHonens %}
           
            {% set difference = 0 %}
				{% set c = c + 1 %}
				{% set totale =  totale + reglement.montant %}
				<tr>
					<td style="padding:3px;border-right:1px solid white;text-align: left;">{{c}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: left;">
						{{reglement.seance.code}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: left;">{{reglement.enseignant.nom ~ ' ' ~ reglement.enseignant.prenom}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: right;">{{reglement.seance.start|date("m/d/Y")}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: right;">{{ reglement.nbrHeure}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: right;">{{reglement.seance.heurDb|date('H:i:s') }}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: left;">{{reglement.seance.heurFin|date('H:i:s') }}</td>
					{% set difference = date(reglement.seance.heurFin|date('H:i:s')).diff(date(reglement.seance.heurDb|date('H:i:s'))) %}
					
					<td style="padding:3px;border-right:1px solid white;text-align: left;"></td>
					<td style="padding:3px;border-right:1px solid white;text-align: left;">{{reglement.seance.programmation.element.designation}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: right;">{{reglement.seance.programmation.natureEpreuve.designation}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: right;">{{reglement.seance.programmation.element.nature ? reglement.seance.programmation.element.nature.designation}}</td>
					<td style="padding:3px;border-right:1px solid white;text-align: right;"></td>
					<td style="padding:3px;border-right:1px solid white;text-align: right;">
						{{reglement.montant|number_format(2)}}</td>
				</tr>

			{% endfor %}


		</tbody>

	</table>
	<h5>nombre des séances :{{bordereaux.univHHonens|length}}</h5>

	<br><br>


	<footer>
		<div style="position: relative;left: 5%;width:90%;border-top:1px solid #000;padding:5px;text-align: center;font-size: 11px;line-height:14px">
			<p>B.P. 6533, Avenue Allal El Fassi,Madinat Al Irfane,  Rabat 10 000. Maroc - Web : www.uiass.ma - Contact : contact@uiass.ma
				<br/>Tel : +212 5 37 68 70 20 / 21 / 22 - Fax : +212 5 37 77 01 06</p>
		</div>
	</footer>


</page>
