{% extends 'base_univ.html.twig' %}
{% block title %}Inscription , Frais | Univ{% endblock %}
{% block body %}
{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'_frais'}}) }}
    <div id="right-sidebar" class="actions animated" >
    </div>

    <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
        <div class="col-lg-4">
            <h2 class="fo">Univ , Inscription </h2>
        </div>
        <div class="col-lg-8">
            <div class="title-action">
                <div class="title-action">
                    {#% include './module_achat/facturefrs/inc/workflow.html.twig' %#}
                    <button class="btn btn-white btn-xs btn-lg my-button " data-style="expand-left"  type="submit"> <i class="fa fa-save"></i> {{ button_label|default('Enregistrer') }}</button>
                </div>   
            </div>
        </div>
        <div class="border-b"></div>
        <div class="col-lg-12">
            {{ wo_render_breadcrumbs() }}
        </div>
        {#{{ render(controller('App\\Controller\\moduleAchat\\CommandefrsController:showbreadcumb',{ 'commande': commande.id})) }}
#} 

    </div>
    <br/><br/>
    <div class="row pt-20">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="padding-top: 4px ;">

                    {#{% include './module_achat/facturefrs/inc/workflow_breadcumb.html.twig' %}#}

                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        {#<ul class="nav nav-tabs">
                                            <li><a class="nav-link active show" href="#tab-1" data-toggle="tab">Informations</a></li>
                                            <li><a class="nav-link" href="#tab-2" data-toggle="tab">Articles</a></li>

                                            <li><a class="nav-link" href="#tab-3" data-toggle="tab">Le suivi des opérations </a></li>

                                        </ul>#}
                                        {% include './module_univ/inscription/inc/navigation.html.twig' %}
                                    </div>
                                </div>
                                <div class="col-md-12" >
                                    <div class="panel-body">

                                        <div class="tab-content">
                                            <div class="tab-pane active show" id="tab-1">
                                                <div class="row">
                                                    <div class="col-md-4 b-r">
                                                        <h3 class="m-t-none m-b">Informations </h3>
                                                      


                               

                                                      


                                                        

                                
                                                        
                                                        <div class="hr-line-dashed"></div>
                                                        <div class="form-group row">
                                                            <label class="col-sm-4 required "> {{ form_label(form.frais ,'Frais ', {'label_attr':{'class':'col-sm-12'}}) }}</label> 
                                                            <div class="col-sm-8 ">
                                                                {{ form_widget(form.frais,{'attr':{'class':'form-control form-control-sm select2'}}) }}
                                                              
                                                            </div>
                                                        </div>

                                                        <div class="hr-line-dashed"></div>
                                                        <div class="form-group row">
                                                            <label class="col-sm-4 required "> {{ form_label(form.montant ,'Mantant', {'label_attr':{'class':'col-sm-12'}}) }}</label> 
                                                            <div class="col-sm-8 ">
                                                                {{ form_widget(form.montant,{'attr':{'class':'form-control form-control-sm'}}) }}
                                                              
                                                            </div>
                                                        </div>





                                                    </div>
                                                    <div class="col-md-8">
                                                        <h3 class="m-t-none m-b">Frais </h3>
                                                        <div class="hr-line-dashed hr-line-dashed-co"></div> 
                                                        <table class="t-m table table-striped table-bordered table-hover w-m dataTables-example dataTable datatable-show3" id="datatable-show3">
                                                            <thead>
                                                                <tr>
                                                                  
                                                                    <th width="20%">Frais</th>
                                                                    <th width="15%">Montant</th>
                                                                    <th width="15%">Crée par</th>
                                                                    <th width="15%">date création</th>
                                                                    <th width="5%">sup</th>
                                                                   
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                {% for operation_cab in inscription.operationscab %}
                                                                {% for operation_det in operation_cab.operationsdet %}
                                                                <tr>
                                                                   
                                                                   <th>{{operation_det.frais.designation}}</th>    
                                                                   <th>{{operation_det.Montant}}</th>    
                                                                   <th>{{operation_det.UserCreated.nom}}</th>    
                                                                   <th>{{operation_det.Created|date("m/d/Y")}}</th>    
                                                                   <th><a style="float: right;" id = "{{ operation_det.id }}" class="_delete_frais fa fa-trash-o"></a></th>         
                                                                </tr>
                                                                {% endfor %}
                                                                {% endfor %}

                                                            </tbody>

                                                            </table>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if inscription is defined %}
    <input type="hidden" name="_id" value="{{ inscription.id }}" />
{% endif %}

    {#{ render(controller('App\\Controller\\moduleAchat\\MaFacturefrscabController:showhistorique',{ 'facture': facture.id})) }#}
    {{ form_end(form) }}
{% endblock %}







{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('univ_inscription') }}
{% endblock %}