{% extends 'base_univ.html.twig' %}
{% block title %}Liste Non Admissible | Admission | UNIV
{% endblock %}
{% block body %}


    <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
        <div class="col-lg-4">
            <h2 class="fo">Formations sans concours
            </h2>
        </div>
        <div class="col-lg-8">
            <div class="title-action"></div>
        </div>
        <div class="border-b"></div>
        <div class="col-lg-12">
            {{ wo_render_breadcrumbs() }}
        </div>
        {#{{ render(controller('App\\Controller\\moduleAchat\\CommandefrsController:showbreadcumb',{ 'commande': commande.id})) }}
                                                                                                                                                                                                        #}

    </div>
    <br/><br/>
    <div class="row pt-20">

        <div class="col-md-12 paddin">
            <div class="ibox">

                <div class="ibox-content">
                    <div class="panel blank-panel">
                        <div class="panel-heading">
                            <div class="panel-options">
                                {% include './module_univ/pre_admission/inc/navigation_pre_tabs.html.twig' %}
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-12">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab-1">
                                      
                                        <div class="tab-content">
                                            <div class="tab-pane fade show active">
                                                <div class="row m-2">
                                                    <div class="table-responsive">

                                                        <div class="col-3">
                                                            <select class="form-control _multiple_actions" style="display: none">
                                                                <option value="">Action</option>
                                                                <option value="_mentionner_admissible">Mentionner admissible</option>


                                                            </select>
                                                        </div>
                                                        <div class="col-md-12 search-postion tab-postion ">

                                                            <h5 class="m-left">Etudiants non admissibles</h5>
                                                            <br><br><br><br>
                                                            <table class="t-m table table-striped table-bordered table-hover w-m dataTables-example dataTable datatable-show1">
                                                                <thead>
                                                                    <tr>
                                                                        <th>#</th>
                                                                        <th>Choix</th>
                                                                        <th>Code Etudiant</th>
                                                                        <th>Code pré-inscription</th>
                                                                        <th>Nom</th>
                                                                        <th>Prénom</th>
                                                                        <th>Nature demande</th>
                                                                        <th>Type bac</th>
                                                                        <th>Moyenne bac</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    {% for key , etudiant in etudiants %}
                                                                        <tr>
                                                                            <td>{{ key+1 }}</td>
                                                                            <td style="text-align:center;">
                                                                                {% if etudiant.exist_admission is null %}
                                                                                    <input type="checkbox" class="action" name="_action" value="{{etudiant.id_preinscription}}">
                                                                                {% else %}
                                                                                    -
                                                                                {% endif %}
                                                                            </td>

                                                                            <td>{{ etudiant.code_etudiant }}</td>
                                                                            <td>{{ etudiant.code_preinscription }}</td>
                                                                            <td>{{ etudiant.prenom }}</td>
                                                                            <td>{{ etudiant.nom}}</td>
                                                                            <td>{{ etudiant.nature_demande}}</td>
                                                                            <td>{{ etudiant.type_bac}}</td>
                                                                            <td>{{ etudiant.moyenne_bac}}</td>
                                                                        </tr>
                                                                    {% endfor %}
                                                                </tbody>
                                                                <tfoot>
                                                                    <tr>
                                                                        <th></th>
                                                                        <th>Choix</th>
                                                                        <th>Code Etudiant</th>
                                                                        <th>Code pré-inscription</th>
                                                                        <th>Nom</th>
                                                                        <th>Prénom</th>
                                                                        <th>Nature demande</th>
                                                                        <th>Type bac</th>
                                                                        <th>Moyenne bac</th>

                                                                    </tr>
                                                                </tfoot>
                                                            </table>

                                                        </div>
                                                        <!--<span class="float-right">
                                                                                                                                                                                                        <b>Total :
                                                                                                                                                                                                        {"{total}#}</b>
                                                                                                                                                                                                        </span>-->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('univ_admission') }}
{% endblock %}
