			<div class="col-lg-12">

				<div class="ibox ">

					<div class="ibox-content" style="padding-top: 0px">
						<div class="panel-options">
							<ul class="nav nav-tabs">


								<li>
									<a class="nav-link active " href="#">
										<i class="fa fa-info-circle"></i>
										Informations</a>
								</li>


							</ul>
						</div>
						<div class="table-responsive">
							<br>
							<div class="row">
								<div class="col-md-2 b-r">
									{% include './module_univ/preinscription_grille/inc/navigation_pre_tabs.html.twig' %}
								</div>


								<div class="col-md-4 b-r">

									<div class="form-group row">
										{{ form_label(form.etablissement ,'Etablissement(*) :', {'label_attr':{'class':'col-sm-4'}}) }}
