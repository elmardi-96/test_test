{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form _grille'}}) }}
<div class="sidebar-container">


	<div class="tab-content bod">


		<div id="tab-1" class="tab-pane active">

			<div class="sidebar-title">
				<h3>
					<i class="fa fa-info-circle"></i>
					Année active :
					<span class="annee">{{form.vars.value.annee ? form.vars.value.annee.designation}}</span>
				</h3>
			</div>

			<div class="right-sidebar-content">

{% if form.vars.value.annee !=null%}
				<div class="ibox">
					<div class="ibox-content">
						<div class="">
							
							<div class="form-group row ">
								{{ form_label(form.moyenne ,'Moyenne', {'label_attr':{'class':'col-sm-12'}}) }}
								<div class="col-sm-12">
									{{ form_widget(form.moyenne,{'attr':{'class':'form-control  form-control-sm','placeholder':'Moyenne'}}) }}

									<div class="form-error {% if form_errors(form.moyenne)|length > 0 %}error-class-tab{% endif %}">
										{{ form_errors(form.moyenne) }}
									</div>
								</div>

                            </div>
                            <br/>
							<button class="btn btn-white btn-xs btn-lg my-button btn-block waves-effect waves-light" data-style="expand-left" type="submit">
								<i class="fa fa-save"></i>
								Enregistrer</button>
						</div>
					</div>
				</div>
				{%else%}
				<div class="col-md-12 ">
					<div class="forum-item animated bounce">
						<div class="row">
							<div class="col-md-9">
								<div class="forum-icon">
									<i class="fa fa-warning"></i>
								</div>
								<a class="forum-item-title">Important</a>
								<div class="forum-sub-title">
									veuillez activer une année pour cette formation,
									<br/>
									<b>
										{{form.vars.value.formation.designation}}</b>
								</a>
							</div>
						</div>

					</div>
				</div>
			</div>
				{%endif%}
				
			</div>
		</div>
	</div>
	<div class="text-center spr" style="display:none;">
		<div class="spinner-border" role="status">
			<span class="sr-only">Loading...</span>
		</div>
	</div>


</div>

{{form_widget(form._token)}}
{{ form_end(form,{'render_rest': false}) }}
