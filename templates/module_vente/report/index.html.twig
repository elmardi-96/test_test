{% block body %}
	<div id="right-sidebar" class="actions animated"></div>

	<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


		<div class="col-lg-6">
			{% include './module_vente/report/inc/workflow_breadcumb.html.twig' %}
		</div>


		<div class="col-lg-6">
			<div class="title-action">
				
			</div>
		</div>

		<div class="border-b"></div>
		<div class="col-lg-12">

			{% include './module_vente/report/inc/workflow.html.twig' %}
		</div>


	</div>
	<br/><br/>
	<div class="row pt-20">
		<div class="col-lg-12">
			<div class="ibox">
				<div
					class="ibox-content">

					{#{% include './module_achat/facturefrs/inc/workflow_breadcumb.html.twig' %}#}

					<div class="row m-t-sm">
						<div class="col-lg-12">
							<div class="panel blank-panel">
								<div class="panel-heading">
									<div class="panel-options">
										<ul class="nav nav-tabs">
											<li>
												<a class="nav-link active show" href="#tab-1" data-toggle="tab">Informations</a>
											</li>
										</ul>
									</div>
								</div>
								<div class="col-md-12">
									<div class="panel-body">

										<div class="tab-content">
											<div class="tab-pane active show" id="tab-1">
										


												<div class="row">
                                                    <div class="col-md-4">
                                                        <p class="msty">
                                                            Documents
                                                        </p>

                                                        <select id="form_lien" name="form[lien]" class="form-control select2_demo_8 ">
                                                            <option></option>
                                                            <optgroup label="COMMANDES DOCUMENT" type="commande">
                                                                <option value="commandes">COMMANDES</option>
                                                                <option value="commandesReceptionnees">COMMANDES RECEPTIONNEES</option>
                                                                <option value="commandesNonReceptionnees">COMMANDES NON RECEPTIONNEES</option>
                                                                <option value="commandesFacturees">COMMANDES FACTUREES</option>
                                                                <option value="commandesNonFacturees">COMMANDES NON FACTUREES</option>
                                                                {#<option value="reglement">Reglements</option>#}
                                                            </optgroup>
                                                            <optgroup label="FACTURES DOCUMENT" type="facture">
                                                                <option value="factures">FACTURES</option>
                                                                <option value="facturesRegles">FACTURES REGLEES</option>
                                                                <option value="facturesNonRegles">FACTURES NON REGLEES</option>
                                                                <option value="facturesAcompte">FACURES D'ACOMPTE</option>
                                                                <option value="facturesAvoir">FACTURES D'AVOIR</option>
                                                            </optgroup>
                                                            <optgroup label="CLIENT DOCUMENT" type="situationClient">
                                                                <option value="stClient">SITUATION CLIENT</option>
                                                            </optgroup>

                                                        </select>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p class="msty">
                                                            Client
                                                        </p>

                                                        <select id="form_client" name="form[client]" class="form-control select2_demo_7 " multiple="multiple">
                                                            <option></option>
                                                            {% for c in clients %}
                                                                <option value="{{c.id}}" societe="{{c.societe}}">{{c.societe}}</option>
                                                            {% endfor %}

                                                        </select>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p class="msty">
                                                            Dossier
                                                        </p>

                                                        <select id="form_dossier" name="form[dossier]" class="select2_demo_4 form-control " multiple="multiple">
                                                            <option></option>
                                                            {% if app.session.get('dossiers') is defined  %}
                                                                {% for key , dossier in app.session.get('dossiers') %}
                                                                    <option value="{{ dossier.id }}" {% if dossier.id == DossierCourant.id %} selected="selected" {% endif %}>{{ dossier.abreviation|upper }}</option>
                                                                {% endfor %}
                                                            {% endif %}
                                                        </select>
                                                    </div>
                                                    <hr
                                                        class="h-r"/>
                                                    {#<div class="col-md-4">
                                                                                                                                                            <p class="msty">
                                                                                                                                                                    Type
                                                                                                                                                            </p>
                                                                                                    
                                                                                                                                                            <select id="form_type2" name="form[type]" class="select2_demo_5 form-control ">
                                                                                                                                                                    <option></option>
                                                                                                                                                                    <option value="projet">Projet</option>
                                                                                                                                                                    <option value="marche">Marche</option>
                                                                                                    
                                                                                                                                                            </select>
                                                                                                                                                    </div>#}

                                                    <div class="col-md-4">
                                                        <p class="msty">
                                                            Date debut
                                                        </p>

                                                        <input type="date" id="dateDebut" name="t_achatdemandeinternecab[dateDebut]" required="required" class="dateDebut form-control form-control-sm col-md-9" value="{{dateDebut}}">
                                                    </div>

                                                    <div class="col-md-4">
                                                        <p class="msty">
                                                            Date fin
                                                        </p>

                                                        <input type="date" id="dateFin" name="t_achatdemandeinternecab[dateFin]" required="required" class="dateFin form-control form-control-sm col-md-9" value="{{dateFin}}">
                                                    </div>

                                                    <hr class="h-r"/>

                                                    <div class="col-md-4">
                                                        <p class="msty">
                                                            Projet
                                                        </p>

                                                        <select id="form_projet" name="form[projet]" class="select2_demo_3 form-control" multiple="multiple">
                                                            <option>Choix projet</option>
                                                            {% if projet is defined  %}
                                                                {% for key , p in projet  %}
                                                                    <option value="{{p.id}}">{{p.abreviation}}</option>
                                                                {% endfor %}
                                                            {% endif %}
                                                        </select>
                                                    </div>

                                                    {#<div class="col-md-3 projet">
                                                                                                                                                            <p class="msty">
                                                                                                                                                                    Sous Projet
                                                                                                                                                            </p>
                                                                                                    
                                                                                                                                                            <select id="form_sous_projet" name="form[sousProjet]" class="select2_demo_6 form-control" multiple="multiple">
                                                                                                                                                                    <option></option>
                                                                                                    
                                                                                                                                                            </select>
                                                                                                                                                    </div>#}


                                                    <div class="col-md-4">
                                                        <p class="msty">
                                                            Marche
                                                        </p>

                                                        <select id="form_marche" name="form[marche]" class="select2_demo_9 marches form-control" multiple="multiple">
                                                            <option>Choix marche</option>
                                                            {% if projet is defined  %}
                                                                {% for key , m in marche  %}
                                                                    <option value="{{m.id}}">{{m.designation}}</option>
                                                                {% endfor %}
                                                            {% endif %}
                                                        </select>
                                                    </div>

                                                    {#<div class="col-md-3 souMarche">
                                                                                                                                                            <p class="msty">
                                                                                                                                                                    Sous Marche
                                                                                                                                                            </p>
                                                                                                    
                                                                                                                                                            {{ form_widget(form.marchesous,{'attr':{'class':'form-control form-control-sm sousmarche sel2'}}) }}
                                                                                                                                                    </div>#}


                                                    <hr class="h-r"/>

                                                    <div class="col-md-4">
                                                        <br>
                                                        <button type="button" class="btn btn-outline btn-primary mbr search3 waves-effect waves-light tDownload">
                                                            <i class="fa fa-download"></i>
                                                            Telecharger
                                                        </button>
                                                        <button type="button" class="btn btn-outline btn-primary mbr rsearch waves-effect waves-light tDownload">
                                                            <i class="fa fa-refresh"></i>
                                                            Annuler
                                                        </button>
                                                    </div>
                                                </div>





											</div>

										</div>
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('reporting_client') }}
{% endblock %}