									<th>Opr</th>
								</tr>
							</thead>
							<tbody class="commande"></tbody>
							<tfoot>
								<tr>
									<th>Action</th>
									<th>Code</th>
									<th>Date</th>
									<th>Description</th>
									<th>Client
									</th>
									<th>Mt HT</th>
									<th>Mt TVA</th>
									<th>Mt TTC</th>
									<th>Budget</th>
