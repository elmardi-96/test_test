{% extends 'base_ugouv.html.twig' %}


{% block title %}Vente , Commande Client , consulter suivi des operations | Achat{% endblock %}
{% block body %}
    <div id="right-sidebar" class="actions animated" >

    </div>

    <div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">
        <div class="col-lg-6">
				{% include './module_vente/uv_commandecab/inc/workflow_breadcumb.html.twig' %}
        </div>
        {#<div class="col-lg-8">
            <div class="title-action">
                <div class="title-action">
                    {% include './module_achat/commandefrs/inc/workflow.html.twig' %}
                </div>   
            </div>
        </div>#}
        <div class="border-b"></div>
        <div class="col-lg-12">
            {% include './module_vente/uv_commandecab/inc/workflow.html.twig' %}
        </div>   
        {#{{ render(controller('App\\Controller\\moduleAchat\\CommandefrsController:showbreadcumb',{ 'commande': commande.id})) }}
        #}

    </div>
    
    <br/><br/>
    <div class="row pt-20">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    {#{% include './module_achat/commandefrs/inc/workflow_breadcumb.html.twig' %}#}
                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        {% include './module_vente/uv_commandecab/inc/navigation.html.twig' %}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="panel-body">
                                        <div class="tab-content">
                                            <div class="tab-pane active show" id="tab-1">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        {% if commande.userUpdated %}
                                                            <h4>Dernière modification</h4>
                                                            <div class="feed-element">
                                                                {% set url = asset('images/user/profil/profil.png') %}
                                                                {% if commande.userUpdated.imageName is not null  %}
                                                                    {% set url = asset('images/user/profil/' ~ commande.userUpdated.imageName)  %}
                                                                {% endif %}
                                                                <a class="float-left" href="">
                                                                    <img alt="image" class="rounded-circle" src="{{ url }}">
                                                                </a>
                                                                <div class="media-body ">

                                                                    <span class="label label-creer float-right label-archive"><i class="fa fa-clock-o" style="font-size: 12.5px;padding: 0px 4px 0px 0px;"></i>Dernière modification</span>
                                                                    <a class="text-info" href="#">@{{ commande.userUpdated.username }}</a> <strong>{{ commande.userUpdated.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ commande.updated ? commande.updated |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                            <hr/>
                                                        {% endif %}
                                                        <h4>Le suivi des operations</h4>
                                                        {% if commande.userCreated %}
                                                            <div class="feed-element">
                                                                {% set url = asset('images/user/profil/profil.png') %}
                                                                {% if commande.userCreated.imageName is not null  %}
                                                                    {% set url = asset('images/user/profil/' ~ commande.userCreated.imageName)  %}
                                                                {% endif %}
                                                                <a class="float-left" href="">
                                                                    <img alt="image" class="rounded-circle" src="{{ url }}">
                                                                </a>
                                                                <div class="media-body ">

                                                                    <span class="label label-creer float-right label-creer">Cree</span>
                                                                    <a class="text-info" href="#">@{{ commande.userCreated.username }}</a> <strong>{{ commande.userCreated.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ commande.created ? commande.created |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                        {% endif %}

                                                        {% if commande.userEncours %}
                                                            <div class="feed-element">
                                                                {% set url = asset('images/user/profil/profil.png') %}
                                                                {% if commande.userEncours.imageName is not null  %}
