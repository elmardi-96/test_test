                                                                </a>
                                                                <div class="media-body ">

                                                                    <span class="label label-creer float-right label-encours">En cours</span>
                                                                    <a class="text-info" href="#">@{{ commande.userEncours.username }}</a> <strong>{{ commande.userEncours.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ commande.dateEncours ? commande.dateEncours |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                        {% endif %}


                                                        {% if commande.userAnnuler %}
                                                            <div class="feed-element">
                                                                {% set url = asset('images/user/profil/profil.png') %}
                                                                {% if commande.userAnnuler.imageName is not null  %}
                                                                    {% set url = asset('images/user/profil/' ~ commande.userAnnuler.imageName)  %}
                                                                {% endif %}
                                                                <a class="float-left" href="">
