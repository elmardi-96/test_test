                                                                </a>
                                                                <div class="media-body ">

                                                                    <span class="label label-creer float-right label-annule">Annule</span>
                                                                    <a class="text-info" href="#">@{{ commande.userAnnuler.username }}</a> <strong>{{ commande.userAnnuler.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ commande.dateAnnuler ? commande.dateAnnuler |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                        {% endif %}


                                                        {% if commande.userArchiver %}
                                                            <div class="feed-element">
                                                                {% set url = asset('images/user/profil/profil.png') %}
                                                                {% if commande.userArchiver.imageName is not null  %}
                                                                    {% set url = asset('images/user/profil/' ~ commande.userArchiver.imageName)  %}
                                                                {% endif %}
                                                                <a class="float-left" href="">
                                                                    <img alt="image" class="rounded-circle" src="{{ url }}">
                                                                </a>
                                                                <div class="media-body ">
                                                                    <span class="label label-creer float-right label-archive">Archive</span>
                                                                    <a class="text-info" href="#">@{{ commande.userArchiver.username }}</a> <strong>{{ commande.userArchiver.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ commande.dateArchiver ? commande.dateArchiver |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                        {% endif %}


                                                        {% if commande.userValider %}
                                                            <div class="feed-element">
                                                                {% set url = asset('images/user/profil/profil.png') %}
                                                                {% if commande.userValider.imageName is not null  %}
                                                                    {% set url = asset('images/user/profil/' ~ commande.userValider.imageName)  %}
                                                                {% endif %}
                                                                <a class="float-left" href="">
                                                                    <img alt="image" class="rounded-circle" src="{{ url }}">
                                                                </a>
                                                                <div class="media-body ">
                                                                    <span class="label label-creer float-right label-valide">Valide</span>
                                                                    <a class="text-info" href="#">@{{ commande.userValider.username }}</a> <strong>{{ commande.userValider.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ commande.dateValider ? commande.dateValider |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                        {% endif %}


                                                        {% if commande.userCommander %}
                                                            <div class="feed-element">
                                                                {% set url = asset('images/user/profil/profil.png') %}
                                                                {% if commande.userCommander.imageName is not null  %}
                                                                    {% set url = asset('images/user/profil/' ~ commande.userCommander.imageName)  %}
                                                                {% endif %}
                                                                <a class="float-left" href="">
                                                                    <img alt="image" class="rounded-circle" src="{{ url }}">
                                                                </a>
                                                                <div class="media-body ">
                                                                    <span class="label label-creer float-right label-genere">Commande</span>
                                                                    <a class="text-info" href="#">@{{ commande.userCommander.username }}</a> <strong>{{ commande.userCommander.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ commande.dateCommander ? commande.dateCommander |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                        {% endif %}




                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}






{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('uventecommande') }}



{% endblock %}