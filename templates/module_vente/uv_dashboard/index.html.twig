                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-md-12">
                                    <canvas id="barChart2"></canvas>
                                    <small>
                                        <strong>prix total commandes par Client :</strong>
    
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
    
    
                <div class="col-md-4">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Factures Client</h5>
                            <div class="ibox-tools">
                                <button aria-label="Bar Chart" class="btn btn-secondary fa fa-bar-chart-o o_graph_button active top-8" data-mode="bar" title="" data-original-title="Graphique en Barres"></button>
                                <!--<button aria-label="Pie Chart" class="btn btn-secondary fa fa-pie-chart o_graph_button top-8" data-mode="pie" title="" data-original-title="Diagramme"></button>-->
                            </div>
    
    
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-md-12">
                                    <canvas id="barChart3"></canvas>
                                    <small>
                                        <strong>prix total commandes par Client :</strong>
    
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
    
    
    
    
                <div class="col-md-4">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Règlement Facture</h5>
                            <div class="ibox-tools">
                                <button aria-label="Bar Chart" class="btn btn-secondary fa fa-bar-chart-o o_graph_button active top-8" data-mode="bar" title="" data-original-title="Graphique en Barres"></button>
                                <!--<button aria-label="Pie Chart" class="btn btn-secondary fa fa-pie-chart o_graph_button top-8" data-mode="pie" title="" data-original-title="Diagramme"></button>-->
                            </div>
    
    
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-md-12">
                                    <canvas id="barChart5"></canvas>
                                    <small>
                                        <strong>prix total commandes par Client :</strong>
    
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
    
            </div>
        </div>
{% endblock %}

