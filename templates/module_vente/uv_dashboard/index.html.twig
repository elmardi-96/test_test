{% extends 'base_ugouv.html.twig' %}

{% block title %} Tableau de bord{% endblock %}

{% block body %}
<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">

    <div class="col-lg-12">
        <h2 class="fo">Vente , Tableau de bord </h2>
        {#{ wo_render_breadcrumbs() }#}
    </div>




    <div class="border-b"></div>
    <div class="col-lg-12">
        {{ wo_render_breadcrumbs() }}
    </div>

</div>

<br/><br/>
<div class="wrapper wrapper-content animated fadeInRight pt-20">
    <div class="row">
                    <div class="col-lg-12">
    
                        <div class="ibox">
                            <div class="ibox-title">
                                <h5>Paramètre de Rechercher</h5>
                            </div>
                            <div class="ibox-content">
    
                                <div class="row">
                                    <div class="col-md-2">
                                        <p class="msty">
                                            Annee 
                                        </p>
                                        {#{ form_label(form.dateDebut ,'Date Debut :', {'label_attr':{'class':'col-sm-6'}}) }#} 
                                        {{ form_widget(form.annee,{'attr':{'class':'select2_demo_3 form-control select2-hidden-accessible','style':'display: block;width: 100%;'}}) }} 
                                    </div>
    
                                    <div class="col-md-3">
                                        <p class="msty">
                                            Client
                                        </p>
                                        {{ form_widget(form.client,{'attr':{'class':'select2_demo_3 form-control select2-hidden-accessible','style':'display: block;width: 100%;'}}) }}
    
                                    </div>
                                    <div class="col-md-2">
                                        <p class="msty">
                                            Statut
                                        </p>
    
                                        {{ form_widget(form.statut,{'attr':{'class':'select2_demo_3 form-control select2-hidden-accessible','style':'display: block;width: 100%;'}}) }}
    
                                    </div>
                                    <div class="col-md-3">
                                        <br/>
                                        <button type="button" class="btn btn-outline btn-primary mbr search"><i class="fa fa-search"></i></button>
                                        <button type="button" class="btn btn-outline btn-primary mbr rsearch"><i class="fa fa-refresh"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
    
                    </div>
                </div>
            <div class="row">
    
            
                <div class="col-lg-2 col-mourad-3 my-dashboard-style">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <span class="label label-info float-right">Annuel</span>
                            <h5>Total Prix Devis</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins _devis_prixtotal">-</h1>
                            <div class="stat-percent font-bold text-info _dv_client"></div>
                            <small>Nombre devis Client active</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-mourad-3 my-dashboard-style">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <span class="label label-primary float-right">Annuel</span>
                            <h5>Total Prix Livraisons</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins _livraison_prixtotal">-</h1>
                            <div class="stat-percent font-bold text-navy _liv_client"></div>
                            <small>Nombre livraisons Client active</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-mourad-3 my-dashboard-style">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <span class="label label-orange float-right">Annuel</span>
                            <h5>Total Prix factures</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins fac_prixtotal">-</h1>
                            <div class="stat-percent font-bold text-orange _fac_client"></div>
                            <small>Nombre factures Client active</small>
                        </div>
                    </div>
                </div>
    
                <div class="col-lg-2 col-mourad-3 my-dashboard-style">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <span class="label label-violet float-right">Annuel</span>
                            <h5>Total Prix reglements</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins _reg_client_prixtotal">-</h1>
                            <div class="stat-percent font-bold text-violet _reg_client"></div>
                            <small>Nombre reglements Client active</small>
                        </div>
                    </div>
                </div>
    
            </div>
            <div class="row {#justify-content-md-center#}">
               
                <div class="col-md-4">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Devis Client</h5>
                            <div class="ibox-tools">
                                <button aria-label="Bar Chart" class="btn btn-secondary fa fa-bar-chart-o o_graph_button active top-8" data-mode="bar" title="" data-original-title="Graphique en Barres"></button>
                                <!--<button aria-label="Pie Chart" class="btn btn-secondary fa fa-pie-chart o_graph_button top-8" data-mode="pie" title="" data-original-title="Diagramme"></button>-->
                            </div>
    
    
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-md-12">
                                    <canvas id="barChart"></canvas>
                                    <small>
                                        <strong>prix total commandes par Client :</strong>
    
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
    
    
                <div class="col-md-4">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5> Livraison Client </h5>
                            <div class="ibox-tools">
                                <button aria-label="Bar Chart" class="btn btn-secondary fa fa-bar-chart-o o_graph_button active top-8" data-mode="bar" title="" data-original-title="Graphique en Barres"></button>
                                <!--<button aria-label="Pie Chart" class="btn btn-secondary fa fa-pie-chart o_graph_button top-8" data-mode="pie" title="" data-original-title="Diagramme"></button>-->
