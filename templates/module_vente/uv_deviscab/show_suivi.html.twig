                                                                    <a class="text-info" href="#">@{{ devis.userCreated.username }}</a> <strong>{{ devis.userCreated.nomComplet|capitalize }}</strong> <br>
                                                                    <small class="text-muted">{{ devis.created ? devis.created |date('d-m-Y H:i:s') : '' }}</small>
                                                                </div>
                                                            </div>
                                                        {% endif %}

