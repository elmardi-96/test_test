<div class="sidebar-container">

    <div class="ibox-tools">
        <a class="close-link close-me" href="">
            <i class="fa fa-times"></i>
        </a>
    </div>

    <div class="tab-content">


        <div id="tab-1" class="tab-pane active">

            <div class="sidebar-title">
                <h3>
                    <i class="fa fa-info-circle"></i>
                    INFORMATIONS
                </h3>
                <small>
                   Generer.</small>
            </div>

            <div class="right-sidebar-content">


                <div class="ibox">
                    <div class="ibox-content">
                        <div class="row">
                            <div
                                class="col-md-12">
                                {#<h3>Expression de Besoin Document </h3>#}

                                {{ form_start(form ,{ 'attr':{'novalidate': 'novalidate' ,'class':'form proforma_valider'}}) }}
                                <div class="form-group">
                                    {{ form_label(form.Objet ,'Objet ', {'label_attr':{'class':'row col-sm-12 '}}) }}

                                    {{ form_widget(form.Objet,{'attr':{'class':'form-control form-control-sm col-sm-12'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.Lieu ,'Lieu ', {'label_attr':{'class':'row col-sm-12 '}}) }}

                                    {{ form_widget(form.Lieu,{'attr':{'class':'form-control form-control-sm col-sm-12'}}) }}
                                </div>

                                <br/><br/>
                                {{ form_widget(form.ids,{'attr':{'class':'form-control form-control-sm'}}) }}

                                {#{ form_widget(form.id) }#}
                                <button type="submit" class="btn btn-white btn-block btn-xs my-button2">
                                    <i class="fa fa-save"></i>
                                    &nbsp;{{ button_label|default('Enregistrer') }}</button>
                                {{ form_end(form,{'render_rest': false}) }}

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>