<div class="sidebar-container">

    <div class="ibox-tools">
        <a class="close-link close-me" href="">
            <i class="fa fa-times"></i>
        </a>
    </div>

    <div class="tab-content">


        <div id="tab-1" class="tab-pane active">

            <div class="sidebar-title">
                <h3> <i class="fa fa-info-circle"></i> INFORMATIONS </h3>
                <small><i class="fa fa-tim"></i>  </small>
            </div>

            <div class="right-sidebar-content">


               

                <div class="ibox">
                    <div class="ibox-content">

                        <h3>Generer Facture </h3>
                       
                            {{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form_factures'}}) }}
                        <div class="form-group">

                            <div class="form-group row">
                                <label class="col-sm-12 required" for="form_refDocAsso">Montant (*) </label>
                                <div class="col-sm-12">
                                    {{montant|number_format(2, '.', ',')}} {{devise ? devise.designation}}
                                </div>
                            </div>
                            {% if remise!=0%}
                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <label class="col-sm-12 required" for="form_refDocAsso">Remise (*) </label>
                                <div class="col-sm-12">
                                    {{remise|number_format(2, '.', ',')}}  {{devise ? devise.designation}}
                                </div>
                            </div>
                            {% endif %}
                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                {{ form_label(form.dateDocAsso ,'Date facture (*) ', {'label_attr':{'class':'col-sm-12'}}) }}
                                <div class="col-sm-12">
                                    {{ form_widget(form.dateDocAsso,{'attr':{'class':'col-sm-8 form-control form-control-sm'}}) }}
                                </div>
                            </div>

                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                {{ form_label(form.refDocAsso ,'Reference (*) ', {'label_attr':{'class':'col-sm-12'}}) }}
                                <div class="col-sm-12">

                                    {{ form_widget(form.refDocAsso,{'attr':{'class':'form-control form-control-sm col-sm-8' ,'placeholder':'Reference'}}) }}
                                </div>
                            </div>
                            <br/>
                           
                            
                            
                             {{ form_widget(form.ids,{'attr':{'class':'form-control form-control-sm'}}) }} 
                            
                            
                        </div>
                        
                        <br/>
                     
                      
                        <button type="submit" class="btn btn-white btn-block btn-xs my-button"><i class="fa fa-save"></i> Enregistrer</button>
                        {{ form_end(form) }}





                    </div>
                </div>
            </div>
        </div>
    </div>
</div>












