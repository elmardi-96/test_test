<div class="sidebar-container new">

	<div class="ibox-tools"></div>

	<div class="tab-content ">


		<div id="tab-1" class="tab-pane active">

			<div class="sidebar-title">
				<h3>
					<i class="fa fa-info-circle"></i>
					INFORMATIONS
				</h3>
				<small>
					{% if  p_comptemasse.id > 0 %}
						Modifier
					{% else %}
						Ajouter
					{% endif %}
				</small>
			</div>

			<div class="right-sidebar-content">


				<table class="table small m-b-xs">
					<tbody>
						<tr>
							<td></td>
						</tr>


					</tbody>
				</table>

				<div class="ibox ">
					<div class="ibox-content">


						{% if  p_comptemasse.id > 0 %}
							{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form_edit'}}) }}
						{% else %}
							{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}
						{% endif  %}


						<div class="row">


							<div class="col-md-12 b-r">

								{% if  p_comptemasse.id > 0 %}
									<div id="test" data-comptemasse-id="{{ p_comptemasse.id|json_encode }}"></div>

								{% endif  %}
								<div class="hr-line-dashed paddi"></div>
								<div class="form-group row">
									{{ form_label(form.designation ,'Designation', {'label_attr':{'class':'col-sm-12 col-form-label'}}) }}
									<div class="col-sm-12">
										{{ form_widget(form.designation,{'attr':{'class':'form-control form-control-sm','placeholder': 'Designation'}}) }}
										<span class="form-error-message">
											{{ form_errors(form.designation) }}
										</span>
									</div>

								</div>
								<div class="hr-line-dashed"></div>
								<div class="form-group row">
									{{ form_label(form.type ,'Type', {'label_attr':{'class':'col-sm-12 col-form-label'}}) }}
									<div class="col-sm-12">
										{{ form_widget(form.type,{'attr':{'class':'form-control form-control-sm','placeholder': 'Type'}}) }}
										<span class="form-error-message">
											{{ form_errors(form.type) }}
										</span>
									</div>

								</div>
								<div class="hr-line-dashed"></div>
								<div class="form-group row">
									{{ form_label(form.dossier ,'Dossier', {'label_attr':{'class':'col-sm-12 col-form-label'}}) }}
									<div class="col-sm-12">
										{{ form_widget(form.dossier,{'attr':{'class':'form-control form-control-sm','placeholder': 'Dossier'}}) }}
										<span class="form-error-message">
											{{ form_errors(form.dossier) }}
										</span>
									</div>

								</div>


								<div class="hr-line-dashed"></div>

								<div class="form-group row">
									{{ form_label(form.active ,'Active', {'label_attr':{'class':'col-sm-12 col-form-label'}}) }}
									<div class="col-sm-12">
										{{ form_widget(form.active) }}
									</div>
								</div>
							
								<div class="hr-line-dashed"></div>
								
								

								{% if  p_comptemasse.id > 0 %}
									<div class="form-group row">
										<div class="col-sm-6">
											<button class="btn btn-primary btn-block btn-xs  button-edit-comptemasse">
												<i class="fa fa-save"></i>
												&nbsp;{{ button_label|default('Modifier') }}</button>

										</div>
										<div class="col-sm-6">
											<a href="#" data-id="{{p_comptemasse.id}}" data-token="{{ csrf_token('delete' ~ p_comptemasse.id) }}" class="btn btn-block btn-xs btn-danger _delete " id="_delete">
												<i class="fa fa-trash" style="color: white !important;"></i>
												Supprimer</a>
										</div>


									</div>
								{% else %}
									<div class="form-group row">

										<div class="col-sm-6">
											<button class="btn btn-primary btn-block btn-xs  button-save-comptemasse">
												<i class="fa fa-save"></i>
												&nbsp;{{ button_label|default('Enregistrer') }}</button>

										</div>
										<div class="col-sm-6">
											<button class="btn btn-primary btn-block btn-xs  button-save-add-comptemasse">
												<i class="fa fa-save"></i>
												&nbsp;Enregistrer et Ajouter</button>

										</div>
									</div>
								{% endif  %}


							</div>

						</div>

						{{form_widget(form._token)}}
						{{ form_end(form,{'render_rest': false}) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

