{% extends 'base_config.html.twig' %}

{% block title %}Affecter Dossier
{% endblock %}

{% block body %}
	<div id="right-sidebar" class="actions animated"></div>
	<div class="edit">
		{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}


		<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


			<div class="col-lg-6">
				<h2 class="fo">Parametrage Dossier
					<span>(p_dossier)</span>
				</h2>
			</div>

			<div class="col-lg-6">
				<div class="title-action">
					<button class="btn btn-white btn-xs btn-lg my-button" data-style="expand-left" type="submit">
						<i class="fa fa-save"></i>
						{{ button_label|default('Enregistrer') }}</button>

				</div>
			</div>

			<div class="border-b"></div>
			<div class="col-lg-12">

				{{ wo_render_breadcrumbs() }}
			</div>
		</div>


		<br/><br/>
		<div class="row pt-20 scroll_content">
			<div class="col-lg-12 ">
				<div class="ibox">
					<div class="ibox-content">

						<div class="message-success"></div>
						<div class="row m-t-sm">
							<div class="col-lg-12">
								<div class="panel blank-panel">
									<div class="panel-heading">
										<div class="panel-options">
										    {% include './parametrage/p_dossier/inc/navigation_pre_tabs.html.twig' %}
										</div>
									</div>


									<div class="panel-body">
										<div class="col-md-12">
											<div class="tab-content">
												<div class="tab-pane active" id="tab-1">


													<div class="row">
														
														<div class="col-lg-3">
																{% include './parametrage/p_dossier/inc/navigation_af.html.twig' %}
														</div>

														<div class="col-md-4 b-r">
															<div class="form-group row">
																{{ form_label(form.ModulesDossiers ,'Choix des dossiers  :', {'label_attr':{'class':'col-sm-4'}}) }}
																<div class="col-sm-8">
																	{{ form_widget(form.ModulesDossiers,{'attr':{'class':'form-check-inline form-control select2_dossiers'}}) }}
																</div>
															</div>


															<div class="hr-line-dashed"></div>
														</div>
													<div class="col-md-5">
														<h3 class="m-t-none m-b ">Dossier
														</h3>

														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<table class="table table-striped fichier-liste-style">
															<thead>
																<tr>

																	<th width="20%">Nom</th>
																	<th width="15%">Abreviation</th>
																	<th width="15%">Description</th>
																	<th width="5%"></th>

																</tr>
															</thead>
															<tbody>
																{% for p_dossier in p_dossiers %}
																	<tr>

																		<th>{{p_dossier.nomDossier}}</th>
																		<th>{{p_dossier.abreviation}}</th>
																		<th>{{p_dossier.description}}</th>
																		{% if p_dossier in us_module.ModulesDossiers %}
																			<th>
																				<i class="fa fa-check-square-o"></i>
																			</th>
																		{% else %}
																			<th>
																				<i class="fa fa-square-o"></i>
																			</th>
																		{% endif %}
																	</tr>
																{% endfor %}

															</tbody>

														</table>
													</div>


													</div>


												</div>


											</div>

										</div>
									</div>


								</div>

							</div>
						</div>


					</div>

				</div>
			</div>


		</div>

	</div>
	{{ form_end(form) }}
{% endblock %}
{% block javascripts %}
	{{ parent() }}{{ encore_entry_script_tags('pdossier') }}
{% endblock %}

