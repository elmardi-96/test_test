<div class="sidebar-container new">

	<div class="ibox-tools"></div>

	<div class="tab-content ">


		<div id="tab-1" class="tab-pane active">

			<div class="sidebar-title">
				<h3>
					<i class="fa fa-info-circle"></i>
					INFORMATIONS

				</h3>

			</div>

			<div class="right-sidebar-content">


				<table class="table small m-b-xs">
					<tbody>
						<tr>
							<td></td>
						</tr>


					</tbody>
				</table>

				<div class="ibox ">
					<div class="ibox-content">


						{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}


						<div class="row">


							<div class="col-md-12 b-r">


								<div class="hr-line-dashed paddi"></div>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group row">

											<label class="col-sm-12">Projet</label>
											<div class="col-sm-12">
												<select id="form_projet" name="form[projet]" class="select2_demo_3 form-control">
													<option>Choix projet</option>
													{% if projet is defined  %}
														{% for key , p in projet  %}
															<option value="{{p.id}}">{{p.abreviation}}</option>
														{% endfor %}
													{% endif %}
												</select>

												<span class="form-error-message">
													{{ form_errors(form.designation) }}
												</span>
											</div>

										</div>
									</div>
									<div class="hr-line-dashed paddi"></div>
									<div class="col-md-6">
										<div class="form-group row">
											{{ form_label(form.cloturer ,'Cloturer :', {'label_attr':{'class':'col-sm-12'}}) }}
											<div class="col-sm-12">
												{{ form_widget(form.cloturer) }}

											</div>
										</div>

									</div>
								</div>


							</div>

						</div>

						{{form_widget(form._token)}}
						{{ form_end(form,{'render_rest': false}) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
