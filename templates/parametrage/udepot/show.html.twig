{% extends 'base_ugouv.html.twig' %}

{% block title %}Depot
{% endblock %}


{% block body %}

	<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">

		<div class="col-lg-6">
			{% include './parametrage/udepot/inc/workflow_breadcumb.html.twig' %}
			{#{ wo_render_breadcrumbs() }#}
		</div>
		<div class="col-lg-6">
			{#<div class="title-action">
				

				<a id="_delete" class="btn btn-white btn-xs my-button">
					<i class="fa fa-trash"></i>
					Suprimer</a>

			</div>#}
		</div>
		<div class="border-b"></div>
		<div class="col-lg-12">
			{% include './parametrage/udepot/inc/workflow.html.twig' %}
		</div>
	</div>
	<br><br>
	<div class="row pt-20">
		<div class="col-lg-12 ">
			<div class="ibox">

				<div class="ibox-content">

					<div class="message-success"></div>
					<div class="row m-t-sm">
						<div class="col-lg-12">
							<div class="panel blank-panel">
								<div class="panel-heading">
									<div class="panel-options">

										{%  include './parametrage/udepot/inc/navigation.html.twig' %}

									</div>
								</div>
								<div class="col-md-12">
									<div class="panel-body">

										<div class="tab-content">
											<div class="tab-pane active" id="tab-1">
												<div class="row">
													<div class="col-md-6 b-r">

														<h3 class="m-t-none m-b">Informations</h3>

														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Id</label>

															<div class="col-sm-8">
																<p class="form-control-static">{{ u_depot.id }}</p>
															</div>

														</div>


														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Rererence [code] (*)</label>
															<div class="col-sm-3">
																<p class="form-control-static">{{ u_depot.code }}</p>
															</div>
														</div>

														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Titre (*)</label>
															<div class="col-sm-8">
																<p class="form-control-static">{{ u_depot.titre }}</p>
															</div>
														</div>


														<div class="hr-line-dashed hr-line-dashed-co"></div>


														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Description</label>
															<div class="col-sm-8">
																<p class="form-control-static">{{ u_depot.description }}</p>
															</div>
														</div>


														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Etat</label>
															<div class="col-sm-3">
																<p class="form-control-static">{{ u_depot.etat }}</p>
															</div>
														</div>

														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Action</label>

															<div class="col-sm-8">
																<p class="form-control-static">
																	{% if u_depot.active == 1 %}Activer{% else %}Desactiver
																	{% endif %}
																</p>
															</div>

														</div>


													</div>


													<div class="col-md-6">


														<h3 class="m-t-none m-b">Adresse</h3>


														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Pays</label>
															<div class="col-sm-3">
																<p class="form-control-static">{{ u_depot.pays }}</p>
															</div>
														</div>


														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Ville</label>
															<div class="col-sm-3">
																<p class="form-control-static">{{ u_depot.ville }}</p>
															</div>
														</div>


														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Adresse</label>
															<div class="col-sm-8">
																<p class="form-control-static">{{ u_depot.adresse }}</p>
															</div>
														</div>

														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Code postal</label>
															<div class="col-sm-3">
																<p class="form-control-static">{{ u_depot.codePostal }}</p>
															</div>
														</div>


													</div>
													<div class="col-md-12">
														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Autre Informations </label>
															<div class="col-sm-12">
																<p class="form-control-static">{{ u_depot.autreInformation }}</p>
															</div>
														</div>
													</div>


												</div>


											</div>

										</div>

									</div>
								</div>

							</div>
						</div>
					</div>


				</div>
			</div>
			<div class="hr-line-dashed hr-line-dashed-co"></div>


		</div>
		<div id="test" data-depot-id="{{ u_depot.id|json_encode }}"></div>
		{% if Udepot is defined %}
			<input type="hidden" name="_id" value="{{ Udepot.id }}"/>
		{% endif %}
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('udepot') }}
{% endblock %}
