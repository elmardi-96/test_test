<div class="sidebar-container new">

	<div class="ibox-tools"></div>

	<div class="tab-content ">


		<div id="tab-1" class="tab-pane active">

			<div class="sidebar-title">
				<h3>
					<i class="fa fa-info-circle"></i>
					INFORMATIONS
				</h3>
				<small>
					{% if  univ_p_enseignant_grille.id > 0 %}
						Modifier
					{% else %}
						Ajouter
					{% endif %}
				</small>
			</div>

			<div class="right-sidebar-content">


				<table class="table small m-b-xs">
					<tbody>
						<tr>
							<td></td>
						</tr>


					</tbody>
				</table>

				<div class="ibox ">
					<div class="ibox-content">


						{% if  univ_p_enseignant_grille.id > 0 %}
							{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form_edit'}}) }}
						{% else %}
							{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}
						{% endif  %}


						<div class="row">


							<div class="col-md-12 b-r">

								{% if  univ_p_enseignant_grille.id > 0 %}
									<div id="test" data-enseignant-id="{{ univ_p_enseignant_grille.id|json_encode }}"></div>

								{% endif  %}
                                                    <div class="form-group row">
                                                        {{ form_label(form.grade ,'Grade', {'label_attr':{'class':'col-sm-12'}}) }}
                                                        <div class="col-sm-12">
                                                            {{ form_widget(form.grade,{'attr':{'class':'form-control form-control-sm select2','placeholder': 'Grade'}}) }}
                                                            <span class="form-error-message">
                                                                {{ form_errors(form.grade) }}
                                                            </span>
                                                        </div>

                                                    </div>
                                                    <div class="hr-line-dashed paddi"></div>
                                                    <div class="form-group row">
                                                        {{ form_label(form.formation ,'Formation', {'label_attr':{'class':'col-sm-12'}}) }}
                                                        <div class="col-sm-12">
                                                            {{ form_widget(form.formation,{'attr':{'class':'form-control form-control-sm select2','placeholder': 'Formation'}}) }}
                                                            <span class="form-error-message">
                                                                {{ form_errors(form.formation) }}
                                                            </span>
                                                        </div>

                                                    </div>
                                                    <div class="hr-line-dashed paddi"></div>

                                                    <div class="form-group row">
                                                        {{ form_label(form.natureEpreuve ,'Nature epreuve', {'label_attr':{'class':'col-sm-12'}}) }}
                                                        <div class="col-sm-12">
                                                            {{ form_widget(form.natureEpreuve,{'attr':{'class':'form-control form-control-sm select2','placeholder': 'Nature epreuve'}}) }}
                                                            <span class="form-error-message">
                                                                {{ form_errors(form.natureEpreuve) }}
                                                            </span>
                                                        </div>

                                                    </div>
                                                    <div class="hr-line-dashed paddi"></div>
                                                    <div class="form-group row">
                                                        {{ form_label(form.typeElement ,'Type element', {'label_attr':{'class':'col-sm-12'}}) }}
                                                        <div class="col-sm-12">
                                                            {{ form_widget(form.typeElement,{'attr':{'class':'form-control form-control-sm select2','placeholder': 'typeElement'}}) }}
                                                            <span class="form-error-message">
                                                                {{ form_errors(form.typeElement) }}
                                                            </span>
                                                        </div>

                                                    </div>
                                                    <div class="hr-line-dashed paddi"></div>
                                                    <div class="form-group row">
                                                        {{ form_label(form.montant ,'Montant(*)', {'label_attr':{'class':'col-sm-12'}}) }}
                                                        <div class="col-sm-12">
                                                            {{ form_widget(form.montant,{'attr':{'class':'form-control form-control-sm','placeholder': 'Montant(*)'}}) }}
                                                            <span class="form-error-message">
                                                                {{ form_errors(form.montant) }}
                                                            </span>
                                                        </div>

                                                    </div>

                                                    <div class="hr-line-dashed paddi"></div>

                                                    <div class="form-group row">
                                                        {{ form_label(form.active ,'Active', {'label_attr':{'class':'col-sm-12'}}) }}
                                                        <div class="col-sm-12">
                                                            {{ form_widget(form.active) }}
                                                        </div>
                                                    </div>
                                                    <div class="hr-line-dashed paddi"></div>
								{% if  univ_p_enseignant_grille.id > 0 %}
									<div class="form-group row">
										<div class="col-sm-6">
											<button class="btn btn-primary btn-block btn-xs  button-edit-enseignant">
												<i class="fa fa-save"></i>
												&nbsp;{{ button_label|default('Modifier') }}</button>

										</div>
										<div class="col-sm-6">
											{% for operation in operations|filter(operation => operation.prefix == '_delete') %}

												<a {% if operation.route is not null %} data-id="{{univ_p_enseignant_grille.id}}" data-token="{{ csrf_token('delete' ~ univ_p_enseignant_grille.id) }}" href="#{# {{ path(operation.route) }} #}" {% endif %} id="{{operation.prefix}}" class="btn btn-block btn-xs btn-danger _delete{{operation.classCs}}">
													<i class="fa {{ operation.icon }}" style="color: white !important;"></i>
													{{ operation.titre|capitalize }}</a>

											{% endfor %}
										</div>


									</div>
								{% else %}
									<div class="form-group row">

										<div class="col-sm-5">
											<button class="btn btn-primary btn-block btn-xs  button-save-enseignant">
												<i class="fa fa-save"></i>
												&nbsp;{{ button_label|default('Enregistrer') }}</button>

										</div>
										<div class="col-sm-7">
											<button class="btn btn-primary btn-block btn-xs  button-save-add-enseignant">
												<i class="fa fa-save"></i>
												&nbsp;Enregistrer et Ajouter</button>

										</div>
									</div>
								{% endif  %}


							</div>

						</div>

						{{form_widget(form._token)}}
						{{ form_end(form,{'render_rest': false}) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

