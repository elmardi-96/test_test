								<div class="hr-line-dashed paddi"></div>
								{% if  u_p_responsable.id > 0 %}
									<div class="form-group row">
										<div class="col-sm-3">
											<button class="btn btn-primary btn-block btn-xs  button-edit-responsable">
												<i class="fa fa-save"></i>
												&nbsp;{{ button_label|default('Modifier') }}</button>

										</div>
										<div class="col-sm-3">
											{% for operation in operations|filter(operation => operation.prefix == '_delete') %}

												<a {% if operation.route is not null %} data-id="{{u_p_responsable.id}}" data-token="{{ csrf_token('delete' ~ u_p_responsable.id) }}" href="#{# {{ path(operation.route) }} #}" {% endif %} id="{{operation.prefix}}" class="btn btn-block btn-xs btn-danger _delete{{operation.classCs}}">
													<i class="fa {{ operation.icon }}" style="color: white !important;"></i>
													{{ operation.titre|capitalize }}</a>

											{% endfor %}
											{# <a href="#" data-id="{{u_p_responsable.id}}" data-token="{{ csrf_token('delete' ~ u_p_responsable.id) }}" class="btn btn-block btn-xs btn-danger _delete " id="_delete">
												<i class="fa fa-trash" style="color: white !important;"></i>
												Supprimer</a> #}
										</div>


									</div>
