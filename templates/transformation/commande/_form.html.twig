{{ form_start(form ,{'attr':{'novalidate': 'novalidate' , 'class':'form'}}) }}


<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">

    <div class="col-lg-4">
        <h2 class="fo">Transformation , Commande
        </h2>
    </div>

    <div class="col-lg-8">
        <div class="title-action">

      
                <button class="btn btn-white btn-xs btn-lg my-button " data-style="expand-left" type="submit">
                    <i class="fa fa-save"></i>
                    {{ button_label|default('Enregistrer') }}
                </button>

           
        </div>
    </div>

    <div class="border-b"></div>
    <div class="col-lg-12">
        {{ wo_render_breadcrumbs() }}
    </div>

</div>
<br/><br/>

<div class="row pt-20">
    <div class="col-lg-12 ">
        <div class="ibox">

            <div class="ibox-content">

                <div class="message-success"></div>


                <div class="row m-t-sm">
                    <div class="col-lg-12">
                        <div class="panel blank-panel">
                            <div class="panel-heading">
                                <div class="panel-options">
                                 {% if commande.id > 0 %}
                                 {% include './transformation/commande/inc/navigation.html.twig' %}
                                 {% endif %}
                                </div>
                            </div>

                            <div class="panel-body">
                                <div class="col-md-12">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab-1">


                                            


                                                <div class="row">
                                                    <div class="col-md-12 b-r">

                                                        <h3 class="m-t-none m-b">Informations
                                                        </h3>



                                                    

                                                 

                                                        <div class="hr-line-dashed"></div>
                                                        <div class="form-group row">
                                                            {{ form_label(form.designation ,'Description Commande :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                            <div class="col-sm-3">
                                                                {{ form_widget(form.designation,{'attr':{'class':'form-control form-control-sm ' ,'placeholder':'Description'}}) }}
                                                            </div>
                                                        </div>

                                                        
                                                    


                                                        <div class="hr-line-dashed"></div>

														<div class="form-group row">
															{{ form_label(form.datecommande ,'Date Cmd :', {'label_attr':{'class':'col-sm-4'}}) }}
															<div class="col-sm-2">
																{{ form_widget(form.datecommande,{'attr':{'class':'form-control form-control-sm'}}) }}
															</div>
														</div>
                             


                                                        <div class="hr-line-dashed"></div>

                                                        <div class="form-group row">
                                                            {{ form_label(form.type ,'Type  :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                            <div class="col-sm-4">
                                                                {{ form_widget(form.type,{'attr':{'class':'form-check-inline  form-control-sm'}}) }}
                                                            </div>
                                                        </div>
                                                        <div class="marche">
                                                            <div class="hr-line-dashed"></div>

                                                            <div class="form-group row">
                                                                {{ form_label(form.marche ,'Marché  :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                                <div class="col-sm-3">
                                                                    {{ form_widget(form.marche,{'attr':{'class':'form-control form-control-sm marches'}}) }}
                                                                </div>
                                                            </div>
                                                            <div class="hr-line-dashed"></div>
                                                            <div class="form-group row">
                                                                {{ form_label(form.marchesous ,'Sous Marché  :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                                <div class="col-sm-3">
                                                                    {{ form_widget(form.marchesous,{'attr':{'class':'sousmarche form-control form-control-sm'}}) }}
                                                                </div>
                                                            </div>


                                                        </div>
                                                        <div class="reference">
                                                            <div class="hr-line-dashed"></div>
                                                            <div class="form-group row">
                                                                {{ form_label(form.reference ,'reference Demande :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                                <div class="col-sm-3">
                                                                    {{ form_widget(form.reference,{'attr':{'class':'form-control form-control-sm ' ,'placeholder':'reference'}}) }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="hr-line-dashed"></div>

                                                        <div class="form-group row">
                                                            {{ form_label(form.fournisseur ,'Fournisseur  :', {'label_attr':{'class':'col-sm-4'}}) }}
                                                            <div class="col-sm-3">
                                                                {{ form_widget(form.fournisseur,{'attr':{'class':'form-control form-control-sm'}}) }}
                                                            </div>
                                                        </div>

                                                    </div>




                                                </div>
                                         


                                        </div>
                                      




                                        {% if commande is defined %}
                                            <input type="hidden" name="_id" id="_id" value="{{ commande.id }}"/>
                                        {% endif %}
                                        {{ form_widget(form.detail) }}


                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>


            </div>




        </div>

    </div>
</div>

{{ form_end(form,{'render_rest': false}) }}


