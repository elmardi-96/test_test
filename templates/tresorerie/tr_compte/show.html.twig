{% extends 'base_tresorerie.html.twig' %}

{% block title %}Compte
{% endblock %}


{% block body %}
	<div id="right-sidebar" class="actions animated"></div>
	<div class="row wrapper  white-bg page-heading  fixed-top-navigation-button">


		<div class="border-b"></div>
		<div class="col-lg-12">
			{% include './tresorerie/tr_compte/inc/workflow.html.twig' %}
		</div>
	</div>
	
	<div class="row pt-20">
		<div class="col-lg-12">
			<div class="ibox">
				<div class="ibox-content">


					<div class="row m-t-sm">
						<div class="col-lg-12">
							<div class="panel blank-panel">
								<div class="panel-heading">
									<div
										class="panel-options">
										{#<ul class="nav nav-tabs">
										                                            <li><a class="nav-link active show" href="#tab-1" data-toggle="tab">Informations</a></li>
										                                            <li><a class="nav-link" href="#tab-2" data-toggle="tab">Articles</a></li>
										                                        </ul>#}
										{% include './tresorerie/tr_compte/inc/navigation.html.twig' %}
									</div>
								</div>
								<div class="col-md-12">
									<div class="panel-body">

										<div class="tab-content">
											<div class="tab-pane active show" id="tab-1">
												<div class="row">
													<div class="col-md-6 b-r">
														<h3 class="m-t-none m-b">Informations Compte</h3>
														<div class="hr-line-dashed hr-line-dashed-co"></div>
														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Id</label>

															<div class="col-sm-8">
																<p class="form-control-static">{{ compte.id }}</p>
															</div>

														</div>
														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Code</label>

															<div class="col-sm-8">
																<p class="form-control-static">{{ compte.code }}</p>
															</div>

														</div>


														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Designation</label>

															<div class="col-sm-8">
																<p class="form-control-static">{{ compte.designation }}</p>
															</div>

														</div>
														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Abreviation</label>

															<div class="col-sm-8">
																<p class="form-control-static">{{ compte.abreviation }}</p>
															</div>

														</div>
														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Description</label>

															<div class="col-sm-8">
																<p class="form-control-static">{{ compte.description }}</p>
															</div>

														</div>

														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Solde Initial</label>

															<div class="col-sm-8">
																<p class="form-control-static">{{ compte.soldeInitial }}</p>
															</div>

														</div>
														
														<div class="hr-line-dashed hr-line-dashed-co"></div>

														<div class="form-group row ph">
															<label class="col-sm-4 required font-weight-bold font-weight-bold">Active</label>

															<div class="col-sm-8">
																<p class="form-control-static">

																	{% if compte.active==0 or compte.active==null %}
																		Non
																	{% else %}
																		Oui
																		{%endif%}</p>
																</p>
															</div>

														</div>


													</div>
													<div class="col-md-6">
														<h3 class="m-t-none m-b">Informations compte &amp;
														</h3>


													</div>
												</div>
												<hr>

											</div>

										</div>

									</div>


								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>


{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('tr_compte') }}


{% endblock %}
