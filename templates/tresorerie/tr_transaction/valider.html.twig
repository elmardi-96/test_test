                                    {{ form_label(form.observation_bq ,'Observation ', {'label_attr':{'class':'row col-sm-12 '}}) }}

                                    {{ form_widget(form.observation_bq,{'attr':{'class':'form-control form-control-sm col-sm-12'}}) }}
