<div class="mail-body text-right tooltip-demo buttons_foot">

	{% if tr_alimentation is defined and tr_alimentation is not empty and tr_alimentation.id is not empty   %}

		<button data-toggle="dropdown" class="btn btn-sm btn-white btn-outlin dropdown-toggle" type="button">
                <i class="fa fa-ellipsis-v"></i>
        </button>
		<ul class="dropdown-menu">
			{% for key ,  operation in operations  %}
				{% if  operation.prefix == '_delete' %}
					<li>
						<a id="{{operation.prefix}}" data-id="{{tr_alimentation.id}}" data-token="{{ csrf_token('delete' ~ tr_alimentation.id) }}" class='btn-wrf btn btn-xs btn-danger btn-outline {{operation.classCs}}'>
						<i class="fa {{ operation.icon }}"></i>
						{{ operation.titre|capitalize }}</a>
					</li>
				{% endif %}
				{% if page_actuel is defined   and page_actuel == "edit" %}
                        {% if  operation.prefix == '_edit' %}
                            <li>
                                <a href="{{ path('tr_alimentation_show' , {id:tr_alimentation.id})}}" class='btn btn-sm btn-white btn-outline'>
                                    <i class="fa {{ operations['_show'].icon }}"></i>
                                    {{ operations['_show'].titre|capitalize }}</a>
                            </li>
                        {% endif %}
                    {% endif %}

                    {% if page_actuel is defined and  page_actuel =='show' %}

                        {% if  operation.prefix == '_edit' %}
                            <li>
                                <a href="{{ path('tr_alimentation_edit' , {id:tr_alimentation.id})}}" class='btn btn-sm btn-white btn-outline'>
                                    <i class="fa {{ operation.icon }}"></i>
                                    {{ operation.titre|capitalize }}</a>
                            </li>
                        {% endif %}

                    {% endif %}
			{% endfor %}

		</ul>

	{% endif %}

	{% if page_actuel is defined and page_actuel =='new'  %}

        <button id="create_alimentation" class="btn btn-sm btn-white my-button   upper btn-register waves-effect waves-light" data-style="expand-left" type="submit">
            <i class="fa fa-save"></i>
            {{ button_label|default('Enregistrer') }}
        </button>

    {% endif %}

</div>
